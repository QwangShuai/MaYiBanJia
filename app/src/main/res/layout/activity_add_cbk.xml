<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <include layout="@layout/head_beijingse"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="12dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/ll_mingcheng"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_ppname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="菜品名称"
                    android:textColor="#ff666666"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/et_caipinmingcheng"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/fillet_hollow_999999_3"
                    android:hint="请输入菜品的名称"
                    android:maxLength="20"
                    android:paddingLeft="10dp"
                    android:text=""
                    android:textColor="@color/zicolor"
                    android:textColorHint="@color/hintcolor"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="菜品图片"
                    android:textColor="@color/lishisousuo"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_cptu"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/tianjiashangpintu" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/tv_caipinzhuliao"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:text="菜品主料"
                    android:textColor="#ff666666"
                    android:textSize="15sp" />
                <RelativeLayout
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/fillet_hollow_999999_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"></View>
                    <com.mingmen.mayi.mayibanjia.ui.view.XCFlowLayout
                        android:paddingBottom="6dp"
                        android:id="@+id/xcf_zhuliao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></com.mingmen.mayi.mayibanjia.ui.view.XCFlowLayout>
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:layout_marginTop="12dp"
                android:text="@string/add"
                android:textSize="15sp"
                android:textColor="@color/lishisousuo"
                android:layout_gravity="right"
                android:id="@+id/tv_add_zhuliao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:text="投料标准"
                    android:textColor="#ff666666"
                    android:textSize="15sp" />
                <RelativeLayout
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/fillet_hollow_999999_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"></View>
                    <android.support.v7.widget.RecyclerView
                        android:padding="12dp"
                        android:id="@+id/rv_zhuliao_touliaobiaozhun"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_zhuliaobeizhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="主料备注"
                    android:textColor="#ff666666"
                    android:textSize="15sp" />

                <EditText
                    android:gravity="left"
                    android:id="@+id/et_zhuliaobeizhu"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/fillet_hollow_999999_3"
                    android:hint="请输入主料备注"
                    android:maxLength="20"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="@color/zicolor"
                    android:textColorHint="@color/hintcolor"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/tv_caipinfuliao"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:text="菜品辅料"
                    android:textColor="#ff666666"
                    android:textSize="15sp" />
                <RelativeLayout
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/fillet_hollow_999999_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"></View>
                    <com.mingmen.mayi.mayibanjia.ui.view.XCFlowLayout
                        android:paddingBottom="6dp"
                        android:id="@+id/xcf_fuliao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></com.mingmen.mayi.mayibanjia.ui.view.XCFlowLayout>
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:layout_marginTop="12dp"
                android:text="@string/add"
                android:textSize="15sp"
                android:textColor="@color/lishisousuo"
                android:layout_gravity="right"
                android:id="@+id/tv_add_fuliao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:text="投料标准"
                    android:textColor="#ff666666"
                    android:textSize="15sp" />
                <RelativeLayout
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/fillet_hollow_999999_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"></View>
                    <android.support.v7.widget.RecyclerView
                        android:padding="12dp"
                        android:id="@+id/rv_fuliao_touliaobiaozhun"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_fuliaobeizhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="辅料备注"
                    android:textColor="#ff666666"
                    android:textSize="15sp" />

                <EditText
                    android:gravity="left"
                    android:id="@+id/et_fuliaobeizhu"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/fillet_hollow_999999_3"
                    android:hint="请输入辅料备注"
                    android:maxLength="20"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="@color/zicolor"
                    android:textColorHint="@color/hintcolor"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/tv_caipintiaoliao"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:text="菜品调料"
                    android:textColor="#ff666666"
                    android:textSize="15sp" />
                <RelativeLayout
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/fillet_hollow_999999_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"></View>
                    <com.mingmen.mayi.mayibanjia.ui.view.XCFlowLayout
                        android:paddingBottom="6dp"
                        android:id="@+id/xcf_tiaoliao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></com.mingmen.mayi.mayibanjia.ui.view.XCFlowLayout>
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:layout_marginTop="12dp"
                android:text="@string/add"
                android:textSize="15sp"
                android:textColor="@color/lishisousuo"
                android:layout_gravity="right"
                android:id="@+id/tv_add_tiaoliao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:text="投料标准"
                    android:textColor="#ff666666"
                    android:textSize="15sp" />
                <RelativeLayout
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/fillet_hollow_999999_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"></View>
                    <android.support.v7.widget.RecyclerView
                        android:padding="12dp"
                        android:id="@+id/rv_tiaoliao_touliaobiaozhun"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_tiaoliaobeizhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="调料备注"
                    android:textColor="#ff666666"
                    android:textSize="15sp" />

                <EditText
                    android:gravity="left"
                    android:id="@+id/et_tiaoliaobeizhu"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/fillet_hollow_999999_3"
                    android:hint="请输入调料备注"
                    android:maxLength="20"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="@color/zicolor"
                    android:textColorHint="@color/hintcolor"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="售卖价格"
                    android:textColor="#ff666666"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/fillet_hollow_999999_3"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:paddingLeft="9dp"
                    >
                    <EditText
                        android:maxLength="4"
                        android:id="@+id/et_jiage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text=""
                        android:textSize="13sp"
                        android:textColor="#474747"
                        android:hint="请输入售卖价格"
                        android:textColorHint="@color/hintcolor"
                        android:inputType="number"
                        android:background="@null"/>
                    <RelativeLayout
                        android:id="@+id/rl_guige"
                        android:layout_width="77dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical|right">

                        <TextView
                            android:id="@+id/tv_guige"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text=""
                            android:textColor="@color/zicolor"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:hint="元"
                            android:textColorHint="@color/hintcolor"
                            />
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/gray_e7e7e7"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            />
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/tv_xiangxia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/xiangxia_hui"
                            android:layout_marginRight="6dp"
                            android:layout_marginLeft="5dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="毛利(元)"
                    android:textColor="#ff666666"
                    android:textSize="15sp" />

                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/tv_maoli"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="20dp"
                    android:maxLength="20"
                    android:paddingLeft="10dp"
                    android:text="0元"
                    android:textColor="@color/zicolor"
                    android:textColorHint="@color/hintcolor"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
