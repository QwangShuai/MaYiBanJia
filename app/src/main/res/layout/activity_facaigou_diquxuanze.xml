<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/head_beijingse"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:layout_marginTop="35dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="采购名称"
                android:textColor="#ff474747"
                android:textSize="14sp"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/et_caigouming"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/fillet_hollow_e7e7e7_3"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:paddingLeft="9dp"
                    android:hint="请选择"
                    android:textColorHint="@color/hintcolor"
                    android:text=""
                    android:textColor="@color/zicolor"
                    android:textSize="12sp"
                    />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:layout_marginTop="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="市场选择"
                android:textColor="#ff474747"
                android:textSize="14sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_yijishichang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="一级市场"
                android:textColor="#ff474747"
                android:textSize="15sp"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/iv_yiji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/jinru"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="12dp"
                />
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_yijishichang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"></android.support.v7.widget.RecyclerView>
        <LinearLayout
            android:id="@+id/ll_erjishichang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="二级市场"
                android:textColor="#ff474747"
                android:textSize="15sp"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/iv_erji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/jinru"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="12dp"
                />
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_erjishichang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:visibility="gone"></android.support.v7.widget.RecyclerView>
        <LinearLayout
            android:id="@+id/ll_sanjishichang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="三级市场"
                android:textColor="#ff474747"
                android:textSize="15sp"
                android:layout_marginLeft="12dp"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/iv_sanji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/jinru"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="12dp"
                />
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_sanjishichang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:visibility="gone"></android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <Button
        android:id="@+id/bt_queding"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="确定"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/fillet_solid_zangqing_5"
        />
</RelativeLayout>
