                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/dfh_gy" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:text="待发货"
                                    android:textColor="#ff666666"
                                    android:textSize="12sp" />
