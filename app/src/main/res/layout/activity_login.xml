<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@mipmap/login_bg"
    >
    <ScrollView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@drawable/fillet_solid_white_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="48dp"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="23dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="51dp">
                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="22dp"
                            android:src="@mipmap/ywy_ywy"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="27dp"
                            />
                        <RelativeLayout
                            android:layout_marginRight="26dp"
                            android:layout_marginLeft="13dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <EditText
                                android:id="@+id/et_phone"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:gravity="center_vertical"
                                android:text=""
                                android:textColorHint="@color/hintcolor"
                                android:textColor="@color/zicolor"
                                android:textSize="16sp"
                                android:hint="请输入账号／手机号"
                                android:inputType="number"
                                android:maxLength="11"/>
                            <RelativeLayout
                                android:visibility="gone"
                                android:id="@+id/rl_phone_clear"
                                android:paddingLeft="12dp"
                                android:paddingRight="12dp"
                                android:layout_alignParentRight="true"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_centerVertical="true"
                                    android:src="@mipmap/shanchu_red"
                                    android:layout_width="13dp"
                                    android:layout_height="13dp" />
                            </RelativeLayout>
                        </RelativeLayout>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#e7e7e7"
                        android:layout_marginLeft="26dp"
                        android:layout_marginRight="26dp"/>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_marginRight="26dp"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="22dp"
                            android:src="@mipmap/suo_red"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="27dp"
                            />
                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_marginRight="26dp"
                            android:layout_marginLeft="13dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <EditText
                                android:id="@+id/et_pass"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:gravity="center_vertical"
                                android:text=""
                                android:textColorHint="@color/hintcolor"
                                android:textColor="@color/zicolor"
                                android:textSize="16sp"
                                android:hint="请输入密码"
                                android:inputType="textPassword"
                                android:maxLength="11"/>
                            <RelativeLayout
                                android:visibility="gone"
                                android:id="@+id/rl_pass_clear"
                                android:paddingLeft="12dp"
                                android:paddingRight="12dp"
                                android:layout_alignParentRight="true"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_centerVertical="true"
                                    android:src="@mipmap/shanchu_red"
                                    android:layout_width="13dp"
                                    android:layout_height="13dp" />
                            </RelativeLayout>
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/tv_forget_pwd"
                            android:textSize="12sp"
                            android:textColor="@color/zicolor"
                            android:text="忘记密码"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#e7e7e7"
                        android:layout_marginLeft="26dp"
                        android:layout_marginRight="26dp"/>
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/ll_yzm"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="22dp"
                            android:src="@mipmap/yzm_red"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="27dp"
                            />
                        <EditText
                            android:layout_weight="1"
                            android:id="@+id/et_yzm"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:layout_marginLeft="16dp"
                            android:gravity="center_vertical"
                            android:text=""
                            android:maxLength="6"
                            android:textColorHint="@color/hintcolor"
                            android:textColor="@color/zicolor"
                            android:textSize="12sp"
                            android:hint="请输入验证码"
                            android:inputType="number"/>
                        <Button
                            android:id="@+id/bt_yzm"
                            android:layout_width="90dp"
                            android:layout_height="28dp"
                            android:background="@drawable/fillet_solid_zangqing_5"
                            android:text="获取验证码"
                            android:textColor="#ffffff"
                            android:textSize="15sp"
                            android:layout_marginRight="12dp"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#e7e7e7"
                        android:layout_marginLeft="26dp"
                        android:layout_marginRight="26dp"/>

                    <Button
                        android:id="@+id/bt_login"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="60dp"
                        android:background="@drawable/fillet_solid_zangqing_5"
                        android:text="登录"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>
                    <Button
                        android:id="@+id/bt_youke"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/fillet_hollow_zangqing_5"
                        android:text="游客登陆"
                        android:textColor="@color/zangqing"
                        android:textSize="18sp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="20dp"
                        >
                        <TextView
                            android:id="@+id/tv_dongtaimimadenglu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="动态密码登录"
                            android:textColor="@color/zicolor"
                            android:textSize="15sp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"></View>
                        <TextView
                            android:id="@+id/tv_zhuce"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="用户注册"
                            android:textColor="@color/zangqing"
                            android:textSize="15sp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="40dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginBottom="24dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="15sp"
                            android:textColor="@color/hintcolor"
                            android:text="名门科技(哈尔滨)有限公司"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:layout_marginTop="4dp"
                            android:id="@+id/ll_phone"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="10sp"
                                android:textColor="@color/hintcolor"
                                android:text="客服电话"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_marginLeft="4dp"
                                android:textSize="10sp"
                                android:textColor="@color/blue_3184cc"
                                android:text="0451-8886-9191 "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/fillet_solid_white_10"
                    android:elevation="5dp"
                    android:src="@mipmap/title_logo_red"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_gravity="center_horizontal"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
