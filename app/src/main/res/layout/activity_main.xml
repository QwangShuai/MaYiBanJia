<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.mingmen.mayi.mayibanjia.MainActivity">

    <com.mingmen.mayi.mayibanjia.ui.view.noscrollviewpager.NoScrollViewPager
        android:id="@+id/viewpager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/view_fenge"
        app:layout_constraintTop_toTopOf="parent"
        ></com.mingmen.mayi.mayibanjia.ui.view.noscrollviewpager.NoScrollViewPager>
    <View
        android:id="@+id/view_fenge"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#e7e7e7"
        app:layout_constraintBottom_toTopOf="@+id/iv_shouye"
        android:layout_marginBottom="6dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
    <ImageView
        android:id="@+id/iv_shouye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/shouye_pre"
        android:layout_marginLeft="41dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    <ImageView
        android:id="@+id/iv_wode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/wode"
        android:layout_marginRight="41dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="0dp" />
    <ImageView
        android:id="@+id/iv_quanbucaipin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/quanbucaipin"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintRight_toLeftOf="@id/iv_wode"
        app:layout_constraintHorizontal_bias="0.532"
        android:layout_marginBottom="-9dp" />
    <ImageView
        android:id="@+id/iv_gouwuche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/gouwuche"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_shouye"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintHorizontal_bias="0.525"
        android:layout_marginBottom="-1dp" />


</android.support.constraint.ConstraintLayout>
