<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mingmen.mayi.mayibanjia.ui.activity.ShenPiChengGongActivity">
    <include layout="@layout/head_beijingse"></include>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:background="@color/beijing"
        android:orientation="horizontal"
        android:gravity="right|center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textSize="15sp"
            android:text="合计:"
            android:textColor="@color/zicolor"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />
        <TextView
            android:textSize="10sp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/red_ff3300"
            android:text="￥"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_heji"
            android:textSize="15sp"
            android:layout_marginRight="12dp"
            android:textColor="@color/red_ff3300"
            android:text="7700"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
