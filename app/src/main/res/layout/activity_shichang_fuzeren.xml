<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_fafafa"
    android:orientation="vertical">
    <include android:id="@+id/ll_head"
        layout="@layout/head_zangqing"></include>
    <ScrollView
        android:layout_below="@+id/ll_head"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:paddingBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ll_dqr"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="43dp">
                <ImageView
                    android:src="@mipmap/yishouhuo"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="待确认"
                    android:textSize="14sp"
                    android:textColor="@color/zicolor"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></View>
                <TextView
                    android:id="@+id/tv_dqr_no"
                    android:gravity="center"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:text="1"
                    android:background="@drawable/fillet_solid_zangqing_tuoyuan"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp" />
            </LinearLayout>
            <include layout="@layout/view_cutoff_e7e7e7"></include>
            <LinearLayout
                android:id="@+id/ll_yjdd"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="43dp">
                <ImageView
                    android:src="@mipmap/yjdd_scfzr"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="预警订单"
                    android:textSize="14sp"
                    android:textColor="@color/zicolor"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></View>
                <TextView
                    android:id="@+id/tv_yjdd_no"
                    android:gravity="center"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:text="1"
                    android:background="@drawable/fillet_solid_zangqing_tuoyuan"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp" />
            </LinearLayout>
            <include layout="@layout/view_cutoff_e7e7e7"></include>
            <LinearLayout
                android:id="@+id/ll_dqh"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="43dp">
                <ImageView
                    android:src="@mipmap/dfh_gy"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="待取货"
                    android:textSize="14sp"
                    android:textColor="@color/zicolor"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></View>
                <TextView
                    android:id="@+id/tv_dqh_no"
                    android:gravity="center"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:text="1"
                    android:background="@drawable/fillet_solid_zangqing_tuoyuan"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp" />
            </LinearLayout>
            <include layout="@layout/view_cutoff_e7e7e7"></include>
            <LinearLayout
                android:id="@+id/ll_dsh"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="43dp">
                <ImageView
                    android:src="@mipmap/daishouhuo"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="待送货"
                    android:textSize="14sp"
                    android:textColor="@color/zicolor"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></View>
                <TextView
                    android:id="@+id/tv_dsh_no"
                    android:gravity="center"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:text="1"
                    android:background="@drawable/fillet_solid_zangqing_tuoyuan"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp" />
            </LinearLayout>
            <include layout="@layout/view_cutoff_e7e7e7"></include>
            <LinearLayout
                android:id="@+id/ll_zcldd"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="43dp">
                <ImageView
                    android:src="@mipmap/zcldd_sqscfzr"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="自处理订单"
                    android:textSize="14sp"
                    android:textColor="@color/zicolor"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></View>
                <TextView
                    android:id="@+id/tv_zcldd_no"
                    android:gravity="center"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:text="1"
                    android:background="@drawable/fillet_solid_zangqing_tuoyuan"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp" />
            </LinearLayout>
            <include layout="@layout/view_cutoff_e7e7e7"></include>
            <LinearLayout
                android:id="@+id/ll_ywcsh"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="43dp">
                <ImageView
                    android:src="@mipmap/yiwancheng"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="已完成送货"
                    android:textSize="14sp"
                    android:textColor="@color/zicolor"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></View>
                <TextView
                    android:id="@+id/tv_ywcsh_no"
                    android:gravity="center"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:text="1"
                    android:background="@drawable/fillet_solid_zangqing_tuoyuan"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp" />
            </LinearLayout>
            <include layout="@layout/view_cutoff_e7e7e7"></include>
            <LinearLayout
                android:id="@+id/ll_ywy"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="43dp">
                <ImageView
                    android:src="@mipmap/ywy_scfzr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_ywy"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@color/zicolor"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></View>
                <ImageView
                    android:src="@mipmap/jinru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_show"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <include layout="@layout/view_cutoff_e7e7e7"></include>
                <LinearLayout
                    android:id="@+id/ll_phone"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="43dp">
                    <TextView
                        android:id="@+id/tv_phone"
                        android:text="111"
                        android:textSize="14sp"
                        android:textColor="@color/zicolor"
                        android:layout_marginLeft="37dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <include layout="@layout/view_cutoff_e7e7e7"></include>
                <LinearLayout
                    android:id="@+id/ll_dizhi"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="43dp">
                    <TextView
                        android:id="@+id/tv_dizhi"
                        android:text="hahaha"
                        android:textSize="14sp"
                        android:textColor="@color/zicolor"
                        android:layout_marginLeft="37dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/view_cutoff_e7e7e7"></include>
            <LinearLayout
                android:id="@+id/ll_pwd"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="43dp">
                <ImageView
                    android:src="@mipmap/change_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="修改密码"
                    android:textSize="14sp"
                    android:textColor="@color/zicolor"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <Button
        android:layout_marginBottom="12dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:id="@+id/btn_exit"
        android:text="退出登录"
        android:textColor="@color/zangqing"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</RelativeLayout>
