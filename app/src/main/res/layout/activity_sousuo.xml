            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/fillet_solid_white_100"
            android:layout_marginRight="12dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/sousuo"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="10dp"/>
            <LinearLayout
                android:id="@+id/ll_pipei"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone"
                android:background="@drawable/fillet_solid_f2f2f2_5">
                <TextView
                    android:id="@+id/tv_pipei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#ff474747"
                    android:textSize="15sp"
                    android:layout_marginLeft="12dp"/>
                <ImageView
                    android:id="@+id/iv_pipei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/shanchux"
                    android:paddingLeft="12dp"
                    android:paddingRight="6dp"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:id="@+id/et_sousuo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textCursorDrawable="@drawable/editcursor"
                    android:background="@null"
                    android:text=""
                    android:textColor="#474747"
                    android:textSize="12sp"
                    android:hint=""
                    android:paddingLeft="2dp"
                    android:textColorHint="#999999"
                    android:imeOptions="actionSearch"
                    android:singleLine="true"/>

                <LinearLayout
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:id="@+id/ll_xiala"
                    android:layout_marginRight="12dp"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_lable"
                        android:textSize="12sp"
                        android:textColor="@color/zicolor"
                        android:text="市场"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/xiangxia_hui"
                        android:layout_width="8dp"
                        android:layout_height="4dp" />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_clear"
                android:padding="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/iv_clear"
                    android:visibility="visible"
                    android:src="@mipmap/shanchux"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </LinearLayout>
        <TextView
