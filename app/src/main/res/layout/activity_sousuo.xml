<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beijing"
    android:orientation="vertical">
    <!--head-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="24dp">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/fanhui"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/fillet_solid_white_3"
            android:layout_marginRight="12dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/sousuo"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="10dp"/>
            <LinearLayout
                android:id="@+id/ll_pipei"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone"
                android:background="@drawable/fillet_solid_f2f2f2_5">
                <TextView
                    android:id="@+id/tv_pipei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="西红柿"
                    android:textColor="#ff474747"
                    android:textSize="15sp"
                    android:layout_marginLeft="12dp"/>
                <ImageView
                    android:id="@+id/iv_pipei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/shanchux"
                    android:paddingLeft="12dp"
                    android:paddingRight="6dp"/>
            </LinearLayout>
            <EditText
                android:id="@+id/et_sousuo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textCursorDrawable="@drawable/editcursor"
                android:background="@null"
                android:text=""
                android:textColor="#474747"
                android:textSize="12sp"
                android:hint=""
                android:paddingLeft="2dp"
                android:textColorHint="#999999"
                android:imeOptions="actionSearch"
                android:singleLine="true"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_quxiao"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingRight="12dp"
            android:text="取消"
            android:textColor="#474747"
            android:textSize="15sp"
            />
    </LinearLayout>
    <!--没有输入文字时的状态-->
    <LinearLayout
        android:id="@+id/ll_wuzi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--三个标签-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">
            <RelativeLayout
                android:id="@+id/rl_shichang"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_shichang"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="市场"
                    android:textColor="@drawable/selectr_sousuo_shichang"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_marginBottom="2dp"/>
                <View
                    android:id="@+id/view_shichang"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/zangqing"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_dianpu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_dianpu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="店铺"
                    android:textColor="@drawable/selectr_sousuo_shichang"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_marginBottom="2dp"/>
                <View
                    android:id="@+id/view_dianpu"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/zangqing"
                    android:layout_alignParentBottom="true"
                    android:visibility="gone"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_shangpin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_shangpin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="商品"
                    android:textColor="@drawable/selectr_sousuo_shichang"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_marginBottom="2dp"/>
                <View
                    android:id="@+id/view_shangpin"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/zangqing"
                    android:visibility="gone"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </LinearLayout>
        <!--历史搜索记录-->
        <LinearLayout
            android:id="@+id/ll_lishi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">
            <RelativeLayout
                android:id="@+id/rl_lishisousuo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="历史搜索"
                    android:textColor="#474747"
                    android:textSize="12sp"
                    android:layout_marginLeft="12dp"/>
                <ImageView
                    android:id="@+id/iv_lishishanchu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/lajitong"
                    android:layout_marginRight="12dp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <com.mingmen.mayi.mayibanjia.ui.view.XCFlowLayout
                android:id="@+id/xcf_lishisousuo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                >
            </com.mingmen.mayi.mayibanjia.ui.view.XCFlowLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="热门搜索"
                android:textColor="#474747"
                android:textSize="12sp"
                android:layout_marginLeft="12dp"/>
            <com.mingmen.mayi.mayibanjia.ui.view.XCFlowLayout
                android:id="@+id/xcf_remensousuo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                >
            </com.mingmen.mayi.mayibanjia.ui.view.XCFlowLayout>
        </LinearLayout>
        <!--市场-->
        <LinearLayout
            android:id="@+id/ll_shichang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="12dp">
            <ImageView
                android:id="@+id/iv_tu"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:src="@color/white"
                />
        </LinearLayout>
        <!--商品下内容-->
        <LinearLayout
            android:id="@+id/ll_shangpin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">
            <LinearLayout
                android:id="@+id/ll_shaixuankuang"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                >
                <LinearLayout
                    android:id="@+id/ll_diqu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="地区"
                            android:textColor="#ff999999"
                            android:textSize="12sp"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/xialajiantou"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_diqu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="哈尔滨"
                        android:textColor="#474747"
                        android:textSize="15sp"
                        android:layout_marginTop="8dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_pinlei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="品类"
                            android:textColor="#ff999999"
                            android:textSize="12sp"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/xialajiantou"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_pinlei"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="哈尔滨"
                        android:textColor="@color/zicolor"
                        android:textSize="15sp"
                        android:layout_marginTop="8dp"

                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_shaixuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="筛选"
                            android:textColor="#ff999999"
                            android:textSize="12sp"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/xialajiantou"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_shaixuan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="哈尔滨"
                        android:textColor="#474747"
                        android:textSize="15sp"
                        android:layout_marginTop="8dp"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">
                <TextView
                    android:id="@+id/tv_xiaoliang"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="销量"
                    android:textColor="@color/lishisousuo"
                    android:textSize="12sp"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:id="@+id/ll_jiage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_jiage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="价格"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/jiagepaixu"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_pingfenzuigao"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="评分最高"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
            android:id="@+id/rv_youzi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"></com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
