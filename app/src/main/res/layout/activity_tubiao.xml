<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@mipmap/fanhui"
            android:padding="12dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="市场选择"
                android:textColor="#ff666666"
                android:textSize="15sp"
                android:gravity="center"
                />
            <LinearLayout
                android:id="@+id/ll_shichang"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/fillet_hollow_999999_3"
                >
                <TextView
                    android:id="@+id/tv_shichang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/zicolor"
                    android:textSize="12sp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:hint="请选择"
                    android:textColorHint="#ff999999"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/xiangxia_hui"
                    android:layout_marginRight="8dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="开始时间"
                android:textColor="#ff666666"
                android:textSize="15sp"
                android:gravity="center"
                />
            <LinearLayout
                android:id="@+id/ll_kaishi"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/fillet_hollow_999999_3"
                >
                <TextView
                    android:id="@+id/tv_kaishi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/zicolor"
                    android:textSize="12sp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:hint="请选择"
                    android:textColorHint="#ff999999"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/xiangxia_hui"
                    android:layout_marginRight="8dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="结束时间"
                android:textColor="#ff666666"
                android:textSize="15sp"
                android:gravity="center"
                />
            <LinearLayout
                android:id="@+id/ll_jieshu"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/fillet_hollow_999999_3"
                >
                <TextView
                    android:id="@+id/tv_jieshu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/zicolor"
                    android:textSize="12sp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:hint="请选择"
                    android:textColorHint="#ff999999"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/xiangxia_hui"
                    android:layout_marginRight="8dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_fenleimingcheng"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="分类名称：白菜"
                android:textColor="#ff666666"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/bt_chongzhi"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:background="@drawable/fillet_hollow_e7e7e7_3"
                    android:text="重置"
                    android:textColor="#ff474747"
                    android:textSize="15sp"
                    android:layout_marginLeft="20dp"
                    />
                <Button
                    android:id="@+id/bt_queding"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:background="@drawable/fillet_solid_zangqing_3"
                    android:text="确定"
                    android:textColor="#ffffffff"
                    android:textSize="15sp"

                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
</LinearLayout>
