<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_fafafa"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@color/zangqing"
        android:paddingTop="24dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            >
            <LinearLayout
                android:id="@+id/ll_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="分配物流"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:gravity="center"
                    />
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="7dp"
                    android:src="@mipmap/xiangxia_bai"
                    android:layout_marginLeft="6dp"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_sangedian"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/sangedian"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>
    <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
        android:layout_marginTop="12dp"
        android:id="@+id/rv_fenpeiwuliu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView>
</LinearLayout>
