<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@color/zangqing"
        android:paddingTop="24dp"
        >
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="信息录入"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="12dp"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:gravity="center"/>
    </RelativeLayout>
    <ScrollView
        android:layout_marginBottom="60dp"
        android:id="@+id/sl"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="企业名称"
                    android:textColor="#ff474747"
                    android:textSize="14sp"
                    android:gravity="center"
                    />
                <EditText
                    android:id="@+id/et_qiyemingcheng"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textColor="#474747"
                    android:textSize="12sp"
                    android:hint="请填写"
                    android:textColorHint="@color/hintcolor"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="36dp"
                    android:background="@null"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="134dp"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实地照片"
                    android:textColor="#ff474747"
                    android:textSize="14sp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="22dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="36dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上传实地照片"
                        android:textColor="#ff333333"
                        android:textSize="15sp"
                        android:layout_marginTop="20dp"
                        />
                    <ImageView
                        android:id="@+id/iv_tu"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@mipmap/tianjiatupian"
                        android:layout_marginTop="20dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:paddingRight="12dp">
                <TextView
                    android:maxEms="5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="是否可以切换为采购端"
                    android:textColor="#ff474747"
                    android:textSize="14sp"
                    android:gravity="center"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_qiehuan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textColor="@color/zicolor"
                        android:textSize="12sp"
                        android:hint="请选择"
                        android:textColorHint="@color/hintcolor"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="22dp"
                        android:background="@drawable/fillet_hollow_999999_3"
                        android:paddingLeft="5dp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/xiangxia_hui"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="4dp"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="联系方式"
                    android:textColor="#ff474747"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <EditText
                        android:maxLines="1"
                        android:maxLength="13"
                        android:id="@+id/et_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textColor="@color/zicolor"
                        android:textSize="12sp"
                        android:inputType="phone"
                        android:hint="请输入联系方式"
                        android:textColorHint="@color/hintcolor"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="36dp"
                        android:background="@drawable/fillet_hollow_999999_3"
                        android:paddingLeft="5dp"
                        />

                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="205dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="区域选择"
                        android:textColor="#ff474747"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_quyuxuanze"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="36dp"
                            android:background="@drawable/fillet_hollow_999999_3"
                            android:gravity="center_vertical"
                            android:hint="请选择"
                            android:paddingLeft="5dp"
                            android:text=""
                            android:textColor="@color/zicolor"
                            android:textColorHint="@color/hintcolor"
                            android:textSize="12sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:paddingRight="4dp"
                            android:src="@mipmap/xiangxia_hui" />
                    </RelativeLayout>

                </LinearLayout>

                <!--<View-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="1dp"-->
                    <!--android:layout_marginTop="12dp"-->
                    <!--android:background="@color/cutoff" />-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="选择市场"
                            android:textColor="#ff474747"
                            android:textSize="14sp"
                            android:gravity="center"
                            />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/tv_xuanzeshichang"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text=""
                                android:textColor="@color/zicolor"
                                android:textSize="12sp"
                                android:hint="请选择"
                                android:textColorHint="@color/hintcolor"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="36dp"
                                android:background="@drawable/fillet_hollow_999999_3"
                                android:paddingLeft="5dp"
                                />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/xiangxia_hui"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:paddingRight="4dp"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <View
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"></View>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="摊  位  号"
                            android:textColor="#ff474747"
                            android:textSize="14sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <EditText
                                android:id="@+id/et_tanweihao"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text=""
                                android:textColor="@color/zicolor"
                                android:textSize="12sp"
                                android:hint="请填写摊位号"
                                android:textColorHint="@color/hintcolor"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="36dp"
                                android:background="@drawable/fillet_hollow_999999_3"
                                android:paddingLeft="5dp"
                                />
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="详细地址"
                            android:textColor="#ff474747"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/et_xiangxidizhi"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="36dp"
                            android:background="@drawable/fillet_hollow_999999_3"
                            android:gravity="start"
                            android:hint="如街道、门牌号等"
                            android:padding="5dp"
                            android:text=""
                            android:textColor="@color/zicolor"
                            android:textColorHint="@color/hintcolor"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/cutoff" />



            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/bt_queding"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/fillet_solid_zangqing_5"
        android:text="确定"
        android:textSize="18sp"
        android:textColor="@color/white"
        />
</RelativeLayout>
