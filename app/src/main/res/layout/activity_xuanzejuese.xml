<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <include layout="@layout/head_zangqing"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:layout_marginTop="115dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        >
        <LinearLayout
            android:id="@+id/ll_cantingduan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/xuanzejuesebeijing"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_cantingduan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selectr_xzjs_cantingduan"
                android:layout_marginTop="26dp"
                />
            <TextView
                android:id="@+id/tv_cantingduan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="餐厅端"
                android:textColor="#fffbb03b"
                android:textSize="30sp"
                android:layout_marginTop="30dp"
                />
        </LinearLayout>
        <View
            android:layout_width="15dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/ll_gonghuoduan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/xuanzejuesebeijing"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_gonghuoduan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selectr_xzjs_gonghuoduan"
                android:layout_marginTop="26dp"
                />
            <TextView
                android:id="@+id/tv_gonghuoduan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="供货端"
                android:textColor="#ff6dd46d"
                android:textSize="30sp"
                android:layout_marginTop="30dp"
                />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/bt_xiayibu"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/fillet_solid_zangqing_5"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="18sp" />

</LinearLayout>
