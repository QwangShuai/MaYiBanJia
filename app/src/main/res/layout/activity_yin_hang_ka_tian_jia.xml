<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@color/beijing"
        android:paddingTop="24dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="添加银行卡"
                android:textColor="#ff333333"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_fanhui"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:src="@mipmap/fanhui" />

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/lishisousuo"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:text="请绑定持卡本人的银行卡"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="54dp">
            <TextView
                android:id="@+id/chikaren"
                android:textSize="15sp"
                android:text="持卡人"
                android:textColor="@color/zicolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_name"
                android:layout_marginLeft="36dp"
                android:layout_toRightOf="@id/chikaren"
                android:textSize="15sp"
                android:text="皮皮嗨"
                android:textColor="@color/zicolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_wenhao"
                android:layout_alignParentRight="true"
                android:src="@mipmap/wenhao_zangqing"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </RelativeLayout>
        <View
            android:background="@color/cutoff"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <RelativeLayout
            android:id="@+id/rl_yinhang"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="54dp">
            <TextView
                android:id="@+id/yinhang"
                android:textSize="15sp"
                android:text="银    行"
                android:textColor="@color/zicolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_yinhang"
                android:layout_marginLeft="36dp"
                android:layout_toRightOf="@id/yinhang"
                android:textSize="15sp"
                android:text="请选择银行"
                android:textColor="@color/hintcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_jinru"
                android:layout_alignParentRight="true"
                android:src="@mipmap/jinru"
                android:layout_width="7dp"
                android:layout_height="12dp" />
        </RelativeLayout>
        <View
            android:background="@color/cutoff"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_kahao"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="54dp">
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/kahao"
                android:textSize="15sp"
                android:text="卡    号"
                android:textColor="@color/zicolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:inputType="phone"
                android:textColorHint="@color/hintcolor"
                android:background="@null"
                android:id="@+id/et_kahao"
                android:layout_marginLeft="36dp"
                android:layout_toRightOf="@id/kahao"
                android:textSize="15sp"
                android:hint="请输入卡号"
                android:textColor="@color/hintcolor"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <View
            android:background="@color/cutoff"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="54dp">
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/shenfenzheng"
                android:textSize="15sp"
                android:text="身份证"
                android:textColor="@color/zicolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:inputType="phone"
                android:textColorHint="@color/hintcolor"
                android:background="@null"
                android:id="@+id/et_shenfenzheng"
                android:layout_marginLeft="36dp"
                android:layout_toRightOf="@id/shenfenzheng"
                android:textSize="15sp"
                android:hint="请输入身份证号"
                android:textColor="@color/hintcolor"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <View
            android:background="@color/cutoff"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="54dp">
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/shoujihao"
                android:textSize="15sp"
                android:text="手机号"
                android:textColor="@color/zicolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:inputType="phone"
                android:textColorHint="@color/hintcolor"
                android:background="@null"
                android:id="@+id/et_shoujihao"
                android:layout_marginLeft="36dp"
                android:layout_toRightOf="@id/shoujihao"
                android:textSize="15sp"
                android:hint="请输入手机号"
                android:textColor="@color/hintcolor"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_next"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/bg_bt"
        android:text="确认"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="45dp" />
</LinearLayout>
