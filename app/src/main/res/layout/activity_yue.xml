<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/head_beijingse"></include>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="263dp">
        <TextView
            android:textSize="12sp"
            android:text="账户余额(元)"
            android:textColor="@color/zicolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="￥"
                android:textSize="12sp"
                android:textColor="@color/zicolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_yue"
                android:textColor="@color/zicolor"
                android:layout_marginLeft="8dp"
                android:textSize="30sp"
                android:text="0.00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_chongzhi"
        android:layout_marginTop="8dp"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/chongzhi"
                android:layout_width="24dp"
                android:layout_height="22dp" />
            <TextView
                android:textSize="15sp"
                android:textColor="@color/zicolor"
                android:text="充值"
                android:layout_marginLeft="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:src="@mipmap/jinru"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="7dp"
            android:layout_height="12dp" />
    </RelativeLayout>
    <View
        android:layout_marginTop="8dp"
        android:layout_marginLeft="12dp"
        android:background="@color/cutoff"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
    <RelativeLayout
        android:id="@+id/rl_tixian"
        android:layout_marginTop="8dp"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/tixian"
                android:layout_width="24dp"
                android:layout_height="22dp" />
            <TextView
                android:textSize="15sp"
                android:textColor="@color/zicolor"
                android:text="提现"
                android:layout_marginLeft="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:src="@mipmap/jinru"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="7dp"
            android:layout_height="12dp" />
    </RelativeLayout>
</LinearLayout>
