<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <include layout="@layout/head_beijingse"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="店铺头像"
            android:textColor="#ff474747"
            android:textSize="15sp"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            />
        <LinearLayout
            android:id="@+id/ll_touxiang"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.mingmen.mayi.mayibanjia.ui.view.CircleImageView
                android:id="@+id/iv_touxiang"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@color/zangqing"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/jinru"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cutoff"
        android:layout_marginLeft="12dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="店铺名称"
            android:textColor="#ff474747"
            android:textSize="15sp"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/tv_dianming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="农家果蔬店"
            android:textColor="#ff999999"
            android:textSize="14sp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cutoff"
        android:layout_marginLeft="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="账户与安全"
            android:textColor="#ff474747"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_anquan_jinru"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/jinru"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cutoff"
        android:layout_marginLeft="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="完善个人信息"
            android:textColor="#ff474747"
            android:textSize="15sp"
            android:layout_weight="1"
            />
        <LinearLayout
            android:id="@+id/ll_zizhirenzheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_zz_shenhe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="审核通过"
                android:textColor="#2fc22f"
                android:textSize="14sp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/jinru"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                />
        </LinearLayout>

