<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <include layout="@layout/head_zangqing"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=""
            android:textColor="#333333"
            android:textSize="15sp"
            android:background="@null"
            android:hint="请输入手机号"
            android:textColorHint="#cccccc"
            android:inputType="number"
            android:maxLength="11"
            android:layout_marginLeft="12dp"/>
        <Button
            android:id="@+id/bt_yanzhengma"
            android:layout_width="90dp"
            android:layout_height="28dp"
            android:background="@drawable/fillet_solid_zangqing_5"
            android:text="获取验证码"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:layout_marginRight="12dp"/>
    </LinearLayout>
    <View
        android:layout_width="351dp"
        android:layout_height="1dp"
        android:background="#e7e7e7"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
    />

    <EditText
        android:id="@+id/et_yanzhengma"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="12dp"
        android:background="@null"
        android:hint="验证码"
        android:text=""
        android:textColor="#333333"
        android:textColorHint="#cccccc"
        android:inputType="number"
        android:maxLength="6"
        android:textSize="12sp" />

    <View
        android:layout_width="351dp"
        android:layout_height="1dp"
        android:background="#e7e7e7"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        />
    <LinearLayout
        android:id="@+id/ll_zhuce"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_pass1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="12dp"
            android:background="@null"
            android:hint="请输入8-16位字数密码"
            android:text=""
            android:textColor="#333333"
            android:textColorHint="#cccccc"
            android:maxLength="16"
            android:textSize="12sp" />

        <View
            android:layout_width="351dp"
            android:layout_height="1dp"
            android:background="#e7e7e7"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            />
        <EditText
            android:id="@+id/et_pass2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="12dp"
            android:background="@null"
            android:hint="请确认密码"
            android:text=""
            android:textColor="#333333"
            android:textColorHint="#cccccc"
            android:maxLength="16"
            android:textSize="12sp" />

        <View
            android:layout_width="351dp"
            android:layout_height="1dp"
            android:background="#e7e7e7"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            />
    </LinearLayout>
    <Button
        android:id="@+id/bt_xiayibu"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="35dp"
        android:text="下一步"
        android:textColor="#fffaf4"
        android:textSize="18sp"
        android:background="@drawable/fillet_solid_buliang_5"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" ></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="43dp"
       >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册即表示您已同意"
            android:textColor="#666666"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/tv_xieyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《蚂蚁配菜用户协议》"
            android:textColor="@color/zangqing"
            android:textSize="12sp"
            />
    </LinearLayout>
</LinearLayout>
