<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/fillet_hollow_999999_3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="添加需求"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:background="@color/zangqing"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品名称"
                android:textColor="#ff666666"
                android:textSize="15sp"
                android:maxLength="20"/>

            <EditText
                android:singleLine="true"
                android:id="@+id/et_shangpin_ming"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:textColor="#ff474747"
                android:textSize="15sp"
                android:background="@null"
                android:textColorHint="@color/hintcolor"
                android:layout_marginLeft="12dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/cutoff"
            android:layout_marginLeft="12dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品规格"
                android:textColor="#ff666666"
                android:textSize="15sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/fillet_hollow_e7e7e7_3"
                android:gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:paddingLeft="9dp"
                >
                <EditText
                    android:id="@+id/et_caigouliang"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="15sp"
                    android:textColor="#474747"
                    android:hint="请输入采购数量"
                    android:textColorHint="@color/hintcolor"
                    android:inputType="number"
                    android:background="@null"/>
                <RelativeLayout
                    android:id="@+id/rl_guige"
                    android:layout_width="77dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical|right">

                    <TextView
                        android:id="@+id/tv_guige"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textColor="@color/zicolor"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:hint="选择规格"
                        android:textColorHint="@color/hintcolor"
                        />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/cutoff"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        />
                    <ImageView
                        android:id="@+id/tv_xiangxia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/xiangxia_hui"
                        android:layout_marginRight="6dp"
                        android:layout_marginLeft="5dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/cutoff"
            android:layout_marginLeft="12dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/ll_teshu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="12dp"
            android:paddingLeft="12dp"
            android:paddingBottom="12dp">
            <ImageView
                android:id="@+id/iv_teshu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/selectr_fcg_teshu"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="增加特殊要求"
                android:textColor="#ff999999"
                android:textSize="12sp"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl_teshu"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/fillet_hollow_e7e7e7_3"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            >
            <EditText
                android:id="@+id/et_teshu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:text=""
                android:textColor="#474747"
                android:textSize="12sp"
                android:hint="请输入要求"
                android:textColorHint="@color/hintcolor"
                android:gravity="start"
                android:padding="12dp"
                android:maxLength="50"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/iv_shanchuwenzi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/shanchuwenzi"
                    android:layout_gravity="center_vertical"
                    android:padding="10dp"
                    />
                <TextView
                    android:id="@+id/tishi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/50"
                    android:textColor="#ff999999"
                    android:textSize="10sp"
                    />
            </LinearLayout>

        </RelativeLayout>
       <LinearLayout
           android:layout_marginBottom="12dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="right">
           <Button
               android:id="@+id/bt_quxiao"
               android:layout_width="90dp"
               android:layout_height="28dp"
               android:text="取消"
               android:textColor="#ff666666"
               android:textSize="12sp"
               android:background="@drawable/fillet_hollow_999999_14"
               android:layout_marginRight="12dp"
               />
           <Button
               android:id="@+id/bt_queren"
               android:layout_width="90dp"
               android:layout_height="28dp"
               android:text="确认"
               android:textColor="#ffffffff"
               android:textSize="12sp"
               android:background="@drawable/fillet_solid_zangqing_14"
               android:layout_marginRight="12dp"
               />

       </LinearLayout>
    </LinearLayout>
</LinearLayout>
