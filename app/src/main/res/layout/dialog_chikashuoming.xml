<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/fillet_hollow_999999_3"
    android:gravity="center_horizontal"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_cksm"
        android:textColor="@color/zicolor"
        android:textSize="15sp"
        android:text="持卡说明"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:textSize="15sp"
        android:textColor="@color/zicolor"
        android:layout_marginTop="17dp"
        android:text="为保证账户资金安全，只能绑定认证用户本人的银行卡。"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginTop="20dp"
        android:background="@color/cutoff"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
    <TextView
        android:id="@+id/tv_dissmiss"
        android:textColor="@color/zangqing"
        android:textSize="15sp"
        android:layout_marginTop="12dp"
        android:text="知道了"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>