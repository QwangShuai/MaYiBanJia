<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_alignParentRight="true"
            android:id="@+id/rl_close"
            android:padding="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/shanchux"
                android:layout_width="15dp"
                android:layout_height="15dp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_title"
            android:textSize="15sp"
            android:textColor="@color/zicolor"
            android:text="请选择收货地址"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_queren"
            android:textColor="@color/blue_3794e5"
            android:textSize="15sp"
            android:layout_marginRight="12dp"
            android:text="确认"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="@color/gray_e7e7e7"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"></View>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/tv_one"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:textColor="@color/lishisousuo"
            android:textSize="12sp"
            android:gravity="center"
            android:textColorHint="@color/zangqing"
            android:hint="请选择"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_two"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:textColor="@color/lishisousuo"
            android:textSize="12sp"
            android:gravity="center"
            android:textColorHint="@color/zangqing"
            android:hint="请选择"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_three"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:textColor="@color/lishisousuo"
            android:textSize="12sp"
            android:gravity="center"
            android:textColorHint="@color/zangqing"
            android:hint="请选择"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:background="@color/gray_e7e7e7"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"></View>
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="350dp">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
        <android.support.v7.widget.RecyclerView
            android:visibility="gone"
            android:id="@+id/rv_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
        <android.support.v7.widget.RecyclerView
            android:visibility="gone"
            android:id="@+id/rv_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</LinearLayout>