<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_jianhao"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="-"
                android:textColor="@color/zicolor"
                android:textSize="22dp"
                android:gravity="center"
                android:background="@mipmap/jianhaobeijing"
                />
            <EditText
                android:id="@+id/et_shuzi"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:maxLength="4"
                android:text="1234"
                android:textColor="@color/zicolor"
                android:textSize="22dp"
                android:gravity="center"
                android:background="@mipmap/shuzibeijing"
                />
            <TextView
                android:id="@+id/tv_jiahao"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="+"
                android:textColor="@color/zicolor"
                android:textSize="22dp"
                android:gravity="center"
                android:background="@mipmap/jiahaobeijing"
                />
        </LinearLayout>
        <Button
            android:id="@+id/bt_queding"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/fillet_solid_zangqing_5"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="20sp"
            />
    </LinearLayout>

</LinearLayout>
