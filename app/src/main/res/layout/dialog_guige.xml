<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_bg_white"
    android:id="@+id/ll"
    android:padding="2dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_close"
            android:padding="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/shanchux"
                android:layout_width="15dp"
                android:layout_height="15dp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_title"
            android:textSize="15sp"
            android:textColor="@color/zicolor"
            android:text="请选择规格"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_queren"
            android:textColor="@color/blue_3794e5"
            android:textSize="15sp"
            android:layout_marginRight="12dp"
            android:text="确认"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="@color/gray_e7e7e7"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"></View>
    <com.mingmen.mayi.mayibanjia.ui.view.XCFlowLayout
        android:id="@+id/xcf_guige"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.mingmen.mayi.mayibanjia.ui.view.XCFlowLayout>
</LinearLayout>