<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/fillet_hollow_999999_3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <TextView
            android:layout_marginTop="12dp"
            android:id="@+id/tv_beizhu"
            android:text="拒绝理由:"
            android:textSize="14sp"
            android:textColor="@color/lishisousuo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:background="@drawable/fillet_hollow_999999_3"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="11dp"
            android:layout_toRightOf="@+id/tv_beizhu"
            android:layout_width="240dp"
            android:layout_height="match_parent">

            <EditText
                android:maxLines="1"
                android:padding="12dp"
                android:id="@+id/et_teshu"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@null"
                android:textColor="#474747"
                android:textSize="13sp"
                android:hint="请填写拒绝理由"
                android:gravity="start"
                android:maxLength="50" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_hint"
                android:textSize="10sp"
                android:textColor="@color/hintcolor"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="12dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="0/50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">
        <Button
            android:id="@+id/bt_quxiao"
            android:layout_width="90dp"
            android:layout_height="28dp"
            android:text="取消"
            android:textColor="#ff666666"
            android:textSize="12sp"
            android:background="@drawable/fillet_hollow_999999_14"
            android:layout_marginRight="12dp"
            />
        <Button
            android:id="@+id/bt_queren"
            android:layout_width="90dp"
            android:layout_height="28dp"
            android:text="确认"
            android:textColor="#ffffffff"
            android:textSize="12sp"
            android:background="@drawable/fillet_solid_zangqing_14"
            android:layout_marginRight="12dp"
            />

    </LinearLayout>
</LinearLayout>

