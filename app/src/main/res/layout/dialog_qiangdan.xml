<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="350dp"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_qiangdandialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"></android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="12sp"
            android:textColor="@color/lishisousuo"
            android:text="附加费"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:background="@drawable/fillet_hollow_999999_3"
            android:paddingLeft="11dp"
            android:layout_width="match_parent"
            android:layout_height="35dp">
            <EditText
                android:maxLength="4"
                android:inputType="numberDecimal"
                android:textColorHint="@color/hintcolor"
                android:textColor="@color/red_ff3300"
                android:textSize="12sp"
                android:id="@+id/et_fujiafei"
                android:layout_toLeftOf="@+id/yuan"
                android:hint="请输入附加费(非必填)"
                android:layout_centerVertical="true"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginRight="12dp"
                android:layout_alignParentRight="true"
                android:id="@+id/yuan"
                android:text="元"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/white">
        <Button
            android:id="@+id/bt_quxiao"
            android:layout_width="90dp"
            android:layout_height="28dp"
            android:text="取消"
            android:textColor="#ff666666"
            android:textSize="12sp"
            android:background="@drawable/fillet_hollow_999999_14"
            />
        <View
            android:layout_width="12dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/bt_queding"
            android:layout_width="90dp"
            android:layout_height="28dp"
            android:text="确定"
            android:textColor="#ffffffff"
            android:textSize="12sp"
            android:background="@drawable/fillet_solid_zangqing_14"
            />
    </LinearLayout>
</LinearLayout>
