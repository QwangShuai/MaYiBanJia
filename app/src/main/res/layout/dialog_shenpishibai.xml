<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="245dp"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="265dp"
        android:layout_height="245dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <EditText
            android:id="@+id/et_shibaiyuanyin"
            android:layout_width="225dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/fillet_hollow_e7e7e7_3"
            android:padding="16dp"
            android:text=""
            android:textColor="@color/zicolor"
            android:textSize="12sp"
            android:hint="请写明失败原因"
            android:textColorHint="@color/hintcolor"
            android:gravity="start"
            />
        <Button
            android:id="@+id/bt_queding"
            android:layout_width="110dp"
            android:layout_height="28dp"
            android:background="@drawable/fillet_hollow_zangqing_14"
            android:text="确定"
            android:textColor="@color/zangqing"
            android:textSize="12sp"
            android:layout_marginTop="40dp"/>
    </LinearLayout>
</LinearLayout>
