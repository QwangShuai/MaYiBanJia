<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/fillet_solid_white_3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="企业名称"
            android:textColor="#ff474747"
            android:textSize="14sp"
            android:layout_marginTop="30dp"
            />
        <EditText
            android:id="@+id/et_qiyemingcheng"
            android:layout_width="220dp"
            android:layout_height="35dp"
            android:background="@drawable/fillet_hollow_e7e7e7_3"
            android:layout_marginTop="12dp"
            android:text=""
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:textColor="@color/zicolor"
            android:paddingLeft="14dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="企业类别"
            android:textColor="#ff474747"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            />
        <RelativeLayout
            android:layout_width="220dp"
            android:layout_height="35dp"
            android:background="@drawable/fillet_hollow_e7e7e7_3"
            android:layout_marginTop="12dp"
            >
            <TextView
                android:id="@+id/tv_qiyeleibie"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@null"
                android:text=""
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:textColor="@color/zicolor"
                android:paddingLeft="14dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/xiangxia_hui"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                />
        </RelativeLayout>
        <Button
            android:id="@+id/bt_queding"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/fillet_solid_zangqing_20"
            android:text="确定"
            android:textColor="#ffffffff"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tv_quxiao"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="取消"
            android:textColor="#ff666666"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:layout_marginBottom="40dp"
            />
    </LinearLayout>


</LinearLayout>
