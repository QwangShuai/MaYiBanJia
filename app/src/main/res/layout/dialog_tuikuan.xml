<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/fillet_solid_white_3"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:layout_height="wrap_content">
    <TextView
        android:text="退款"
        android:textColor="@color/zicolor"
        android:textSize="15sp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_order_number"
        android:textSize="12sp"
        android:textColor="@color/lishisousuo"
        android:text="订单编号:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="12sp"
            android:textColor="@color/lishisousuo"
            android:text="退款金额"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:background="@drawable/fillet_hollow_999999_3"
            android:paddingLeft="11dp"
            android:layout_width="match_parent"
            android:layout_height="35dp">
            <EditText
                android:inputType="numberDecimal"
                android:textColorHint="@color/hintcolor"
                android:textColor="@color/mayihong"
                android:textSize="12sp"
                android:id="@+id/et_tuikuan"
                android:layout_toLeftOf="@+id/yuan"
                android:hint="请输入退款金额"
                android:layout_centerVertical="true"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginRight="12dp"
                android:layout_alignParentRight="true"
                android:id="@+id/yuan"
                android:text="元"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款原因"
            android:textSize="12sp"
            android:textColor="@color/lishisousuo"
            />
        <RelativeLayout
            android:layout_marginTop="12dp"
            android:id="@+id/rl_teshu"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/fillet_hollow_999999_3"
            android:layout_marginLeft="10dp"
            >
            <EditText
                android:id="@+id/et_yuanyin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:text=""
                android:textColor="#474747"
                android:textSize="12sp"
                android:hint="请输入退款原因(不超过200字)"
                android:textColorHint="@color/hintcolor"
                android:gravity="start"
                android:padding="12dp"
                android:maxLength="200"/>
            <TextView
                android:id="@+id/tishi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:text="0/200"
                android:textColor="#ff999999"
                android:textSize="10sp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:textColor="@color/lishisousuo"
            android:id="@+id/btn_cancle"
            android:text="取消"
            android:background="@drawable/fillet_hollow_e7e7e7_tuoyuan"
            android:layout_width="90dp"
            android:layout_height="28dp" />
        <Button
            android:layout_marginLeft="12dp"
            android:textColor="@color/white"
            android:id="@+id/btn_confirm"
            android:text="确定"
            android:background="@drawable/bg_bt_false"
            android:layout_width="90dp"
            android:layout_height="28dp" />
    </LinearLayout>
</LinearLayout>