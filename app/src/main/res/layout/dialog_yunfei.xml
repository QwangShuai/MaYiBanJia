<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fillet_solid_white_3">
    <LinearLayout
        android:layout_marginLeft="21dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="15sp"
            android:textColor="@color/zicolor"
            android:text="全部运费:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/zicolor"
            android:layout_marginLeft="24dp"
            android:text="￥"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_yunfei"
            android:layout_marginLeft="4dp"
            android:text="360"
            android:textSize="18sp"
            android:textColor="@color/zicolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginRight="21dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="18dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="实际运费:"
            android:textColor="@color/zicolor"
            android:textSize="15sp" />

        <LinearLayout
            android:paddingBottom="4dp"
            android:paddingRight="4dp"
            android:paddingTop="4dp"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/fillet_hollow_e7e7e7_3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="￥"
                android:textColor="@color/zicolor"
                android:textSize="10sp" />

            <EditText
                android:inputType="phone"
                android:id="@+id/et_yunfei"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:text="0"
                android:textColor="@color/zicolor"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@color/cutoff"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="54dp">
        <Button
            android:id="@+id/bt_cancle"
            android:textSize="15sp"
            android:textColor="@color/hintcolor"
            android:background="@color/white"
            android:layout_weight="1"
            android:text="取消"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <View
            android:background="@color/cutoff"
            android:layout_gravity="center_horizontal"
            android:layout_width="1dp"
            android:layout_height="match_parent"></View>
        <Button
            android:id="@+id/bt_submit"
            android:textSize="15sp"
            android:textColor="@color/zangqing"
            android:background="@color/white"
            android:layout_weight="1"
            android:text="确定"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>