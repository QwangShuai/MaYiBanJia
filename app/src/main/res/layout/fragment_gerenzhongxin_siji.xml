<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/bg_fafafa"
    android:layout_height="match_parent">
    <include layout="@layout/head_zangqing"></include>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:paddingBottom="12dp"
            android:background="@drawable/bg_item_yinying"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingLeft="13dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@color/beijing"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <ImageView
                    android:src="@mipmap/gsmc_grzx"
                    android:layout_width="16dp"
                    android:layout_height="14dp" />
                <TextView
                    android:layout_weight="1"
                    android:text="58同城"
                    android:id="@+id/tv_qiye"
                    android:layout_marginLeft="13dp"
                    android:textColor="@color/zangqing"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView

                    android:gravity="center"
                    android:background="@drawable/fillet_solid_white_100"
                    android:text="开启接单"
                    android:id="@+id/tv_jiedan"
                    android:layout_marginRight="12dp"
                    android:textColor="@color/zangqing"
                    android:textSize="12sp"
                    android:layout_width="80dp"
                    android:layout_height="23dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="41dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center_vertical"
                    android:text="葫芦娃"
                    android:id="@+id/tv_name"
                    android:textColor="@color/zicolor"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp" />
                <include layout="@layout/view_cutoff_e7e7e7_match"></include>
                <TextView
                    android:gravity="center_vertical"
                    android:text="18888888888"
                    android:id="@+id/tv_phone"
                    android:textColor="@color/zicolor"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp" />
                <include layout="@layout/view_cutoff_e7e7e7_match"></include>
                <TextView
                    android:gravity="center_vertical"
                    android:text="小型面包车"
                    android:id="@+id/tv_cheleixing"
                    android:textColor="@color/zicolor"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp" />
                <include layout="@layout/view_cutoff_e7e7e7_match"></include>
                <TextView
                    android:gravity="center_vertical"
                    android:text="黑AK6666"
                    android:id="@+id/tv_chepaihao"
                    android:textColor="@color/zicolor"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:paddingBottom="12dp"
            android:background="@drawable/bg_item_yinying"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_jjlsjl"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <ImageView
                    android:layout_marginLeft="14dp"
                    android:src="@mipmap/sz_sj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="12dp"
                    android:text="拒绝历史纪录"
                    android:textSize="15sp"
                    android:textColor="@color/lishisousuo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginRight="12dp"
                    android:src="@mipmap/jinru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_marginLeft="41dp"
                android:background="@color/gray_e7e7e7"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></View>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_jszhxx"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <ImageView
                    android:layout_marginLeft="14dp"
                    android:src="@mipmap/js_grzx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="12dp"
                    android:text="银行卡信息"
                    android:textSize="15sp"
                    android:textColor="@color/lishisousuo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginRight="12dp"
                    android:src="@mipmap/jinru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:visibility="gone"
                android:layout_marginLeft="41dp"
                android:background="@color/gray_e7e7e7"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></View>

            <LinearLayout
                android:id="@+id/ll_ggmm"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <ImageView
                    android:layout_marginLeft="14dp"
                    android:src="@mipmap/ggmm_grzx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="12dp"
                    android:text="更改密码"
                    android:textSize="15sp"
                    android:textColor="@color/lishisousuo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginRight="12dp"
                    android:src="@mipmap/jinru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_exit_login"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_card_yinying"
        android:textSize="15sp"
        android:textColor="@color/red_ff3300"
        android:text="退出登录"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</LinearLayout>