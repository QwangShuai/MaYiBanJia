<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/zangqing">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:paddingTop="24dp">

        <LinearLayout
            android:id="@+id/ll_sousuo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/fillet_solid_white_3"
            android:gravity="center_vertical"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/sousuo"
                android:layout_marginLeft="12dp"/>
            <EditText
                android:id="@+id/et_sousuozi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:textColor="#474747"
                android:textSize="12sp"
                android:hint="搜索商品名称  分类"
                android:gravity="center_vertical"
                android:textColorHint="#ff999999"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:layout_weight="1"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                />
            <ImageView
                android:id="@+id/iv_shanchuzi"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/shanchuwenzi"
                android:layout_marginRight="12dp"/>
        </LinearLayout>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_sousuo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        ></android.support.v7.widget.RecyclerView>
    <!--商品内容-->
    <LinearLayout
        android:id="@+id/ll_shangpin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/ll_shaixuankuang"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            >
            <LinearLayout
                android:id="@+id/ll_diqu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="地区"
                        android:textColor="@color/white_80"
                        android:textSize="12sp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/xiangxia_bai"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_diqu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="哈尔滨"
                    android:textColor="@color/white_80"
                    android:textSize="15sp"
                    android:layout_marginTop="8dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_shaixuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="筛选"
                        android:textColor="@color/white_80"
                        android:textSize="12sp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/xiangxia_bai"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_shaixuan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="不限"
                    android:textColor="@color/white_80"
                    android:textSize="15sp"
                    android:layout_marginTop="8dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_pinlei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="品类"
                        android:textColor="@color/white_80"
                        android:textSize="12sp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/xiangxia_bai"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_pinlei"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="全部"
                    android:textColor="@color/white_80"
                    android:textSize="15sp"
                    android:layout_marginTop="8dp"

                    />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/cutoff"/>
        <LinearLayout
            android:background="@drawable/fillet_solid_white_10_top_zy"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">
                <TextView
                    android:id="@+id/tv_xiaoliang"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="销量"
                    android:textColor="@color/lishisousuo"
                    android:textSize="12sp"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:id="@+id/ll_jiage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tv_jiage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="价格"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/jiagepaixu"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_pingfenzuigao"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="评分最高"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    />
            </LinearLayout>

            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/refresh_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
                    android:id="@+id/rv_shangpin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"></com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView>
            </android.support.v4.widget.SwipeRefreshLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
