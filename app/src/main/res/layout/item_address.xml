<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:id="@+id/ll_kuang"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="18dp"
        >
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="好久不见"
            android:textColor="#ff474747"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18513349775"
            android:textColor="#ff666666"
            android:textSize="15sp"
            android:layout_marginLeft="14dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_moren"
            android:layout_width="35dp"
            android:layout_height="16dp"
            android:gravity="center"
            android:text="默认"
            android:textColor="#ffffffff"
            android:textSize="10sp"
            android:background="@drawable/fillet_solid_zangqing_5"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="6dp"
            />
        <TextView
            android:id="@+id/tv_dizhi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="黑龙江省 哈尔滨市 道里区 哈西大街与复旦路交口南郡香醍雅诺二期5栋1单元1501"
            android:textColor="#ff474747"
            android:textSize="12sp"
            android:paddingRight="20dp"
            android:layout_marginTop="15dp"

            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cutoff"
        android:layout_marginTop="12dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:gravity="right|center_vertical"
        android:paddingRight="20dp">
        <LinearLayout
            android:id="@+id/ll_bianji"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/shouhuodizhi_bianji"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑"
                android:textColor="#ff999999"
                android:textSize="12sp"
                android:layout_marginLeft="4dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_shanchu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/shouhuodizhi_shanchu"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除"
                android:textColor="#ff999999"
                android:textSize="12sp"
                android:layout_marginLeft="4dp"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"/>
</LinearLayout>
