<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:layout_height="wrap_content">
    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/tv_shangpin"
        android:text="哈密瓜"
        android:textSize="16sp"
        android:textColor="@color/lishisousuo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="103dp"
            android:layout_height="35dp"
            android:background="@drawable/fillet_hollow_e7e7e7_3"
            android:gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:paddingLeft="9dp"
            >
            <EditText
                android:maxLength="3"
                android:maxEms="6"
                android:id="@+id/et_caigouliang"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=""
                android:textSize="15sp"
                android:textColor="#474747"
                android:hint="请输入"
                android:textColorHint="@color/hintcolor"
                android:inputType="number"
                android:background="@null"/>
            <RelativeLayout
                android:id="@+id/rl_guige"
                android:layout_width="37dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_marginRight="5dp"
                    android:id="@+id/tv_guige"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textColor="@color/zicolor"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:hint="斤"
                    android:textColorHint="@color/hintcolor"
                    />
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray_e7e7e7"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    />
                <!--<ImageView-->
                    <!--android:id="@+id/iv_xiangxia"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:src="@mipmap/xiangxia_hui"-->
                    <!--android:layout_marginRight="6dp"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_centerVertical="true"/>-->
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:background="@drawable/fillet_hollow_999999_3"
            android:layout_marginLeft="20dp"
            android:textColor="@color/lishisousuo"
            android:textSize="12sp"
            android:gravity="center"
            android:text="特殊要求"
            android:id="@+id/tv_tsyq"
            android:layout_width="30dp"
            android:layout_height="35dp" />

        <TextView
            android:background="@drawable/fillet_hollow_999999_3"
            android:layout_marginLeft="20dp"
            android:textColor="@color/lishisousuo"
            android:textSize="12sp"
            android:gravity="center"
            android:text="添加常购"
            android:id="@+id/tv_tjcg"
            android:layout_width="30dp"
            android:layout_height="35dp" />
        <ImageView
            android:layout_marginLeft="12dp"
            android:id="@+id/iv_shanchu"
            android:src="@mipmap/shouhuodizhi_shanchu"
            android:layout_width="19dp"
            android:layout_height="18dp" />
    </LinearLayout>
</RelativeLayout>