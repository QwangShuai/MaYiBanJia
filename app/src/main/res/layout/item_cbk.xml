<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="12dp"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_caipin"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:src="@mipmap/qr_code" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginLeft="35dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.mingmen.mayi.mayibanjia.utils.custom.MarqueeTextView
                    android:id="@+id/tv_name"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:textAllCaps="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_zoushitu"
                    android:src="@mipmap/zoushi"
                    android:layout_width="16dp"
                    android:layout_height="16dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:gravity="center"
                        android:layout_height="25dp"
                        android:id="@+id/tv_chengben"
                        android:layout_width="wrap_content"
                        android:text="0"
                        android:textColor="@color/zicolor"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="成本价(元)"
                        android:textColor="@color/lishisousuo"
                        android:textSize="12sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:gravity="center"
                            android:layout_height="25dp"
                            android:id="@+id/tv_maoli"
                            android:layout_width="wrap_content"
                            android:text="0"
                            android:textColor="@color/zangqing"
                            android:textSize="13sp" />
                        <ImageView
                            android:id="@+id/iv_state"
                            android:layout_marginLeft="4dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/shangsheng"
                            android:layout_width="10dp"
                            android:layout_height="10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="毛利(元)"
                            android:textColor="@color/lishisousuo"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_tishi"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="!"
                            android:textColor="@color/blue_069ee5"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <EditText
                        android:background="@null"
                        android:id="@+id/et_shoumaijia"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_height="25dp"
                        android:inputType="number"
                        android:maxLength="4"
                        android:text="0"
                        android:textColor="@color/zicolor"
                        android:textSize="13sp" />
                    <View
                        android:background="@color/zangqing"
                        android:layout_width="35dp"
                        android:layout_height="0.5dp"></View>

                    <TextView
                        android:layout_marginTop="7.5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="售卖价(元)"
                        android:textColor="@color/lishisousuo"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <include layout="@layout/view_cutoff_e7e7e7"></include>
</LinearLayout>