<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingTop="15dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/ll_mydianpu"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/dianpu_gray"
                android:layout_width="16dp"
                android:layout_height="15dp" />
            <TextView
                android:id="@+id/tv_dianpuming"
                android:layout_marginLeft="8dp"
                android:text="飘香水果店"
                android:textColor="@color/lishisousuo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginLeft="12dp"
                android:src="@mipmap/jinru"
                android:layout_width="6dp"
                android:layout_height="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_phone"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/dianhua_black"
                android:layout_width="15dp"
                android:layout_height="15dp" />
            <TextView
                android:layout_marginLeft="6dp"
                android:text="联系卖家"
                android:textSize="12sp"
                android:textColor="@color/zicolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:background="@color/cutoff"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="13dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/baozhuanggeshu"
                    android:textSize="13sp"
                    android:textColor="@color/lishisousuo"
                    android:text="包装个数："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_baozhuanggeshu"
                    android:textSize="13sp"
                    android:textColor="@color/zangqing"
                    android:text="15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="31dp"
                android:id="@+id/ll_saomageshu"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/saomageshu"
                    android:textSize="13sp"
                    android:textColor="@color/lishisousuo"
                    android:text="扫码个数："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_saomageshu"
                    android:textSize="13sp"
                    android:textColor="@color/zicolor"
                    android:text="10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="13dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/ll_mydianpu"
                android:id="@+id/ll_saoma"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginRight="9dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/saoma"/>
                <TextView
                    android:text="扫码"
                    android:textSize="12sp"
                    android:textColor="@color/blue_3794e5"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_quhuoma"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:textColor="@color/blue_3794e5"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/ll_saoma"
                android:text="取货码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:background="@color/cutoff"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
