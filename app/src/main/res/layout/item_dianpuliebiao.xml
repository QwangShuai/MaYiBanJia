<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="107dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <ImageView
        android:id="@+id/iv_tu"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@color/zangqing"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        />
    <TextView
        android:id="@+id/tv_dianming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_tu"
        app:layout_constraintLeft_toRightOf="@id/iv_tu"
        android:layout_marginLeft="12dp"
        android:text="绿色天然蔬果店"
        android:textColor="#474747"
        android:textSize="15sp"
        />
    <RatingBar
        android:id="@+id/rb_pingfen"
        android:layout_height="8dp"
        android:layout_width="wrap_content"
        android:numStars="5"
        android:rating="3.5"
        android:isIndicator="false"
        style="@style/foodRatingBar"
        app:layout_constraintTop_toBottomOf="@id/tv_dianming"
        app:layout_constraintLeft_toLeftOf="@id/tv_dianming"
        android:layout_marginTop="12dp"
        />
    <TextView
        android:id="@+id/tv_pingfen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.7"
        android:textColor="#666666"
        android:textSize="12sp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_dianming"
        app:layout_constraintLeft_toRightOf="@id/rb_pingfen"
        />
    <TextView
        android:id="@+id/tv_yishou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已售2045"
        android:textColor="#ff666666"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/tv_pingfen"
        app:layout_constraintBottom_toBottomOf="@id/tv_pingfen"
        android:layout_marginLeft="12dp"
        />
    <TextView
        android:id="@+id/tv_shichangming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="哈达蔬果市场"
        android:textColor="#666666"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_tu"
        app:layout_constraintLeft_toLeftOf="@id/tv_dianming"
        />
    <LinearLayout
        android:id="@+id/ll_didian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="@id/tv_dianming"
        app:layout_constraintTop_toBottomOf="@id/tv_shichangming"
        android:layout_marginTop="12dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/lansedingwei"
            />
        <TextView
            android:id="@+id/tv_dizhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="海河东路信恒现代城B区底商"
            android:textColor="#666666"
            android:textSize="12sp"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_jindian"
        android:layout_width="50dp"
        android:layout_height="23dp"
        android:background="@drawable/fillet_hollow_zangqing_3"
        android:text="进店"
        android:textColor="@color/zangqing"
        android:textSize="12sp"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
    />
</android.support.constraint.ConstraintLayout>
