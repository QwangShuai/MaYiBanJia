<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="horizontal">
       <ImageView
           android:id="@+id/iv_sptu"
           android:layout_width="80dp"
           android:layout_height="80dp"
           android:src="@mipmap/kongtu"
           android:layout_marginLeft="12dp"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_marginLeft="12dp">
           <TextView
               android:id="@+id/tv_name"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="利木赞牛 自繁自养"
               android:textColor="#ff474747"
               android:textSize="13sp"
               />
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginTop="6dp"
               android:gravity="bottom">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text=" ¥"
                   android:textColor="#ff999999"
                   android:textSize="8sp"
                   />
               <TextView
                   android:id="@+id/tv_guige"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="4500元/头(15元*300斤)"
                   android:textColor="#ff999999"
                   android:textSize="12sp"
                   android:layout_marginLeft="4dp"
                   />
           </LinearLayout>
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginTop="6dp"
               android:gravity="bottom">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text=" ¥"
                   android:textColor="#ff333333"
                   android:textSize="12sp"
                   />
               <TextView
                   android:id="@+id/tv_danjia"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="4500"
                   android:textColor="#ff333333"
                   android:textSize="15sp"
                   android:layout_marginLeft="4dp"
                   />
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:paddingRight="12dp"
               android:layout_marginTop="5dp"
               android:gravity="bottom">
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@mipmap/dianpu"/>
               <TextView
                   android:id="@+id/tv_dianpuming"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="无忧肉店"
                   android:textColor="#ff666666"
                   android:textSize="12sp"
                   android:layout_marginLeft="4dp"
                   android:layout_weight="1"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="x"
                   android:textColor="#ff999999"
                   android:textSize="15sp"
                   />
               <TextView
                   android:id="@+id/tv_shuliang"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="1"
                   android:textColor="#ff999999"
                   android:textSize="15sp"
                   android:layout_marginLeft="4dp"
                   />
           </LinearLayout>

       </LinearLayout>
   </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"></View>
</LinearLayout>
