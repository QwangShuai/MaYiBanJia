<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_danxuan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:src="@drawable/selectr_gouwuche_danxuan" />

        <LinearLayout
            android:id="@+id/ll_jindian"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="12dp"
            android:weightSum="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/dianputubiao" />

            <TextView
                android:id="@+id/tv_dianming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="无忧肉店"
                android:textColor="#ff666666"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:src="@mipmap/jinru" />

        </LinearLayout>

        <ImageView
            android:layout_marginLeft="2dp"
            android:id="@+id/iv_jinpai"
            android:src="@mipmap/jinpai"
            android:layout_width="14dp"
            android:layout_height="17dp" />
        <ImageView
            android:layout_marginLeft="2dp"
            android:id="@+id/iv_ming"
            android:src="@mipmap/ming"
            android:layout_width="17dp"
            android:layout_height="15dp" />
        <ImageView
            android:layout_marginLeft="2dp"
            android:id="@+id/iv_ren"
            android:src="@mipmap/ren"
            android:layout_width="14dp"
            android:layout_height="16dp" />
        <ImageView
            android:layout_marginLeft="2dp"
            android:id="@+id/iv_da"
            android:src="@mipmap/da"
            android:layout_width="14dp"
            android:layout_height="16dp" />
        <View
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></View>
        <TextView
            android:singleLine="true"
            android:id="@+id/tv_dianpushichang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="市场"
            android:textColor="#ff3300"
            android:textSize="12sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:background="@color/cutoff" />

    <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
        android:id="@+id/rv_shangpin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"></com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView>
    <View
        android:background="@color/bg_fafafa"
        android:layout_width="match_parent"
        android:layout_height="15dp"></View>
</LinearLayout>
