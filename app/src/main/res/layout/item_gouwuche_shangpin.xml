<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_danxuan"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/selectr_gouwuche_danxuan"
            android:paddingLeft="12dp"
            android:paddingRight="14dp"/>
        <ImageView
            android:id="@+id/iv_tu"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@color/zangqing"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
               >
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="利木赞牛 自繁自养"
                    android:textColor="#ff474747"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp"
                    />

               <!--<LinearLayout
                   android:id="@+id/ll_qidingliang"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:orientation="horizontal"
                   android:layout_marginTop="8dp">
                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginRight="4dp"
                       android:src="@mipmap/qidingliang"
                       android:layout_marginLeft="20dp"/>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="起订量"
                       android:textColor="#ff999999"
                       android:textSize="10sp"
                       />
               </LinearLayout>-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></View>
                <ImageView
                    android:id="@+id/iv_zoushi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/zoushi"
                    android:paddingRight="12dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="11dp"
                android:gravity="bottom">
<!--                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="8dp"
                    android:textColor="#999999"
                    />-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="起订量："
                    android:textColor="#ff999999"
                    android:textSize="12sp"
                    android:layout_marginLeft="4dp"
                    />
                <TextView
                    android:id="@+id/tv_qidingliang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="@color/zicolor"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textColor="#ff3300"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4500"
                    android:textColor="#ffff3300"
                    android:layout_centerVertical="true"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp">
                    <TextView
                        android:id="@+id/tv_jianhao"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:text="-"
                        android:textColor="#e7e7e7"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:background="@mipmap/jianhaobeijing"
                        />
                    <TextView
                        android:id="@+id/tv_number"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:text="1"
                        android:textColor="#e7e7e7"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@mipmap/shuzibeijing"
                        />
                    <TextView
                        android:id="@+id/tv_jiahao"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:text="+"
                        android:textColor="#e7e7e7"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:background="@mipmap/jiahaobeijing"
                        />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"/>
</LinearLayout>
