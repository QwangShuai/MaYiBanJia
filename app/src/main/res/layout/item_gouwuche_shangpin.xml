<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_danxuan"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:paddingLeft="12dp"
            android:paddingRight="14dp"
            android:src="@drawable/selectr_gouwuche_danxuan" />

        <ImageView
            android:id="@+id/iv_tu"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@color/zangqing" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.mingmen.mayi.mayibanjia.utils.custom.MarqueeTextView
                    android:layout_weight="1"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:id="@+id/tv_name"
                    android:textAllCaps="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="利木赞牛 自繁自养"
                    android:textColor="@color/zicolor"
                    android:textSize="18sp" />


                <ImageView
                    android:id="@+id/iv_zoushi"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="8dp"
                    android:src="@mipmap/zoushi" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:gravity="bottom"
                android:orientation="horizontal">
                <!--                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="8dp"
                    android:textColor="#999999"
                    />-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="起订量："
                    android:textColor="#ff999999"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_qidingliang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/zicolor"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="¥"
                    android:textColor="#ff3300"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="4500"
                    android:textColor="#ffff3300"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_jianhao"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:background="@mipmap/jianhaobeijing"
                        android:gravity="center"
                        android:text="-"
                        android:textColor="@color/zangqing"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_number"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:background="@mipmap/shuzibeijing"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/zicolor"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_jiahao"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:background="@mipmap/jiahaobeijing"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="@color/zangqing"
                        android:textSize="20sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
