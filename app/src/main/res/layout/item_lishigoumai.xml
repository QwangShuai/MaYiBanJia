<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:id="@+id/ll_kuang"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:layout_marginLeft="12dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_spming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="普罗旺斯甜橙"
                    android:textColor="#ff474747"
                    android:textSize="13sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="("
                    android:textColor="#ff474747"
                    android:textSize="13sp"
                    />

                <TextView
                    android:id="@+id/tv_dian"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:text="店"
                    android:textSize="9sp"
                    android:textColor="@color/white"
                    android:background="@color/zangqing"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:id="@+id/tv_dianming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="绿色天然蔬果店"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=")"
                    android:textColor="#ff474747"
                    android:textSize="13sp"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_guige"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.5元/斤"
                android:textColor="#ff999999"
                android:textSize="12sp"
                
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="bottom"
                
                >
                <TextView
                    android:id="@+id/tv_renminbi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textColor="@color/zicolor"
                    android:textSize="12sp"
                    />
                <TextView
                    android:id="@+id/tv_jiage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.5"
                    android:textColor="@color/zicolor"
                    android:textSize="15sp"
                    android:layout_marginLeft="4dp"
                    />
                <TextView
                    android:id="@+id/tv_danjia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/zicolor"
                    android:textSize="15sp"
                    />
                <TextView
                    android:id="@+id/tv_spxiaoliang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已售1257"
                    android:textColor="#999999"
                    android:textSize="10sp"
                    android:layout_marginLeft="9dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            >
            <TextView
                android:id="@+id/tv_shijian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018.5.20"
                android:textColor="#ff999999"
                android:textSize="12sp"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cutoff"/>
</LinearLayout>
