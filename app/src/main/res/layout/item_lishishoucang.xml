<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="107dp"
    android:id="@+id/cl_kuang"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_diantu"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@color/gleen1"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/tv_dianming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="绿色天然蔬果店"
        android:textColor="#ff474747"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@id/iv_diantu"
        app:layout_constraintLeft_toRightOf="@+id/iv_diantu"
        android:layout_marginLeft="12dp" />
    <LinearLayout
        android:id="@+id/ll_shoujia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_dianming"
        app:layout_constraintLeft_toLeftOf="@id/tv_dianming">
        <TextView
            android:id="@+id/tv_renminbi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textColor="#ff3300"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/tv_jiage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.5"
            android:textColor="#ff3300"
            android:textSize="15sp"
            android:layout_marginLeft="4dp"
            />
        <TextView
            android:id="@+id/tv_danjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元/斤"
            android:textColor="#ff3300"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/tv_spxiaoliang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已售1257"
            android:textColor="#999999"
            android:textSize="10sp"
            android:layout_marginLeft="9dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_shichang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="哈达蔬果市场"
        android:textColor="#ff666666"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_dianming"
        app:layout_constraintTop_toBottomOf="@id/ll_shoujia"
        android:layout_marginTop="5dp"
        />
    <LinearLayout
        android:id="@+id/ll_dizhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="@id/tv_dianming"
        app:layout_constraintTop_toBottomOf="@id/tv_shichang"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/lansedingwei"
            />
        <TextView
            android:id="@+id/tv_dizhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="海河东路信恒现代城B区底商"
            android:textColor="#666666"
            android:textSize="12sp"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="26dp"
        android:gravity="center_vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_diantu">
        <RatingBar
            android:id="@+id/rb_pingfen"
            android:layout_height="8dp"
            android:layout_width="wrap_content"
            android:numStars="5"
            android:rating="3.7"
            android:isIndicator="false"
            style="@style/foodRatingBar"
           />
        <TextView
            android:id="@+id/tv_pingfen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.7"
            android:textColor="#ff666666"
            android:textSize="12sp"
            android:layout_marginLeft="6dp"
            />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
