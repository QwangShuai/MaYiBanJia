<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/ll_rongqi"
    android:background="@drawable/bg_item_yinying"
    android:layout_height="wrap_content"
    android:paddingBottom="12sp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp">
        <TextView
            android:id="@+id/tv_state"
            android:layout_marginRight="13dp"
            android:textSize="20sp"
            android:textColor="@color/red_ff3300"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="待取货"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_marginLeft="12dp"
        android:background="@color/cutoff"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_order_number"
            android:textSize="15sp"
            android:textColor="@color/lishisousuo"
            android:text="订单编号：1794633446547"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/ll_saoma"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="9dp"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/saoma"/>
            <TextView
                android:text="扫码"
                android:textSize="14sp"
                android:textColor="@color/zangqing"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_marginLeft="13dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_songdashijian0"
            android:textSize="15sp"
            android:textColor="@color/lishisousuo"
            android:text="送达时间："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_songdashijian"
            android:textSize="15sp"
            android:textColor="@color/zangqing"
            android:text="2018-08-20 07:30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_baozhuang"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="13dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/baozhuanggeshu"
                android:textSize="15sp"
                android:textColor="@color/lishisousuo"
                android:text="包装个数："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_baozhuanggeshu"
                android:textSize="15sp"
                android:textColor="@color/zangqing"
                android:text="15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:textSize="14sp"
            android:id="@+id/tv_quhuoma"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/zangqing"
            android:text="取货码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_saomageshu"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="13dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/saomageshu"
            android:textSize="15sp"
            android:textColor="@color/lishisousuo"
            android:text="扫码个数："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_saomageshu"
            android:textSize="15sp"
            android:textColor="@color/zicolor"
            android:text="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_marginLeft="13dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_shichang0"
            android:textSize="15sp"
            android:textColor="@color/lishisousuo"
            android:text="市        场："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_shichang"
            android:textSize="15sp"
            android:textColor="@color/zicolor"
            android:text="哈达农贸市场"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_marginLeft="13dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_dizhi0"
            android:textSize="15sp"
            android:textColor="@color/lishisousuo"
            android:text="地        址："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_dizhi"
                android:textSize="15sp"
                android:textColor="@color/zicolor"
                android:text="哈尔滨市道里区友谊路50号"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginBottom="12dp"
                android:text="显示地图"
                android:id="@+id/tv_ditu"
                android:textSize="15sp"
                android:textColor="@color/blue_3794e5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/view_cutoff_e7e7e7_match" ></include>
    <RelativeLayout
        android:paddingRight="13dp"
        android:gravity="center_vertical"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="53dp">
        <Button
            android:textSize="12sp"
            android:text="通知商家"
            android:textColor="@color/red_ff3300"
            android:id="@+id/btn_tongzhi"
            android:background="@drawable/fillet_hollow_zangqing_tuoyuan"
            android:layout_alignParentRight="true"
            android:layout_width="70dp"
            android:layout_height="28dp" />
    </RelativeLayout>
</LinearLayout>