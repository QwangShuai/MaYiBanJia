<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        >
        <com.mingmen.mayi.mayibanjia.ui.view.CircleImageView
            android:id="@+id/iv_touxiang"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:id="@+id/tv_maijianame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="好久不见"
            android:textColor="#ff333333"
            android:textSize="15sp"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/tv_pinglunshijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018.05.29"
            android:textColor="#ff999999"
            android:textSize="12sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:paddingLeft="54dp"
        android:paddingRight="12dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商家:"
            android:textColor="#ff666666"
            android:textSize="13sp"
            />
        <RatingBar
            android:id="@+id/rb_pingfen"
            android:layout_height="8dp"
            android:layout_width="wrap_content"
            android:numStars="5"
            android:rating="3.5"
            android:isIndicator="true"
            style="@style/foodRatingBar"
            android:layout_marginLeft="12dp"
            />
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></LinearLayout>
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_dingdan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dingdanxiangqing"
            android:textColor="@color/blue_3794e5"
            android:textSize="12sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="54dp"
        android:paddingRight="12dp"
        android:layout_marginTop="12dp"
        >
        <com.mingmen.mayi.mayibanjia.ui.view.XCFlowLayout
            android:id="@+id/xcf_pingjia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.mingmen.mayi.mayibanjia.ui.view.XCFlowLayout>
    </LinearLayout>
    <RelativeLayout
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:visibility="gone"
            android:id="@+id/bt_gone"
            android:layout_alignParentRight="true"
            android:textColor="@color/zicolor"
            android:textSize="15sp"
            android:background="@drawable/fillet_hollow_999999_14"
            android:text="收起回复"
            android:layout_width="90dp"
            android:layout_height="28dp" />
        <TextView
            android:gravity="center"
            android:id="@+id/bt_show"
            android:layout_alignParentRight="true"
            android:textColor="@color/zicolor"
            android:textSize="15sp"
            android:background="@drawable/fillet_hollow_999999_14"
            android:text="回复"
            android:layout_width="70dp"
            android:layout_height="28dp" />
    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:paddingRight="12dp"
        android:id="@+id/rl_lable"
        android:layout_marginLeft="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll"
            android:background="@color/gray_e7e7e7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="66dp"
            android:paddingRight="12dp"
            android:paddingBottom="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            >
            <com.mingmen.mayi.mayibanjia.ui.view.XCFlowLayout
                android:id="@+id/xcf_huifu_lable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.mingmen.mayi.mayibanjia.ui.view.XCFlowLayout>
        </LinearLayout>
        <TextView
            android:layout_below="@+id/ll"
            android:gravity="center"
            android:id="@+id/bt_tijiao"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:background="@drawable/fillet_solid_zangqing_tuoyuan"
            android:text="提交回复"
            android:layout_width="90dp"
            android:layout_height="28dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_marginLeft="50dp"
        android:background="@color/gray_e7e7e7"
        android:id="@+id/ll_shangjiahuifu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:paddingLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="12dp"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="商家回复"
                android:textColor="#ff999999"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_huifushijian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018.05.29 14:20"
                android:textColor="#ff999999"
                android:textSize="12sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="66dp"
            android:paddingRight="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            >
            <com.mingmen.mayi.mayibanjia.ui.view.XCFlowLayout
                android:id="@+id/xcf_huifu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.mingmen.mayi.mayibanjia.ui.view.XCFlowLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
