<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="#"
            android:textSize="9sp"
            android:textColor="@color/hintcolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_suoyin"
            android:text="1"
            android:textSize="15sp"
            android:textColor="@color/hintcolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:background="@drawable/bg_card_yinying"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="68dp">
        <TextView
            android:id="@+id/tv_quhuoma"
            android:text="12345678910111213"
            android:textColor="@color/zicolor"
            android:layout_marginLeft="14dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_marginRight="12dp"
            android:id="@+id/bt_sure"
            android:background="@drawable/bg_zangqing_biankuang"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="确认收货"
            android:textSize="12sp"
            android:textColor="@color/zangqing"
            android:layout_width="80dp"
            android:layout_height="28dp" />
    </RelativeLayout>
</LinearLayout>