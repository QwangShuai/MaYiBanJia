<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="12dp"
    android:id="@+id/cl_kuang"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="92dp">
        <ImageView
            android:id="@+id/iv_sptu"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@color/turquoise" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/iv_sptu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_spming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="甜橙"
                android:textColor="#474747"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_fujiafei"
                android:textColor="@color/red_ff3300"
                android:text="(附加费:200元)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/iv_sptu"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_guige"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6元/袋(2斤)"
                android:textColor="#ff999999"
                android:textSize="12sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_marginTop="55dp"
            android:layout_toRightOf="@+id/iv_sptu"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_renminbi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="#333333"
                android:textSize="12sp" />
            <TextView
                android:layout_marginLeft="4dp"
                android:id="@+id/tv_jiage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.5"
                android:textColor="#333333"
                android:textSize="15sp"/>
        </LinearLayout>
        <TextView
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="x1"
            android:id="@+id/tv_shuliang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/addcar"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
</LinearLayout>
