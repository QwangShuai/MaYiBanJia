<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:id="@+id/cl_kuang">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_width="80dp"
            android:layout_height="80dp">
            <ImageView
                android:id="@+id/iv_sptu"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:layout_width="43dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:visibility="visible"
                    android:id="@+id/iv_jishida"
                    android:src="@mipmap/jishida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:id="@+id/ll"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="12dp">
                <!--<com.mingmen.mayi.mayibanjia.utils.custom.MarqueeTextView-->
                    <!--android:focusable="true"-->
                    <!--android:focusableInTouchMode="true"-->
                    <!--android:singleLine="true"-->
                    <!--android:ellipsize="marquee"-->
                    <!--android:id="@+id/tv_spming"-->
                    <!--android:marqueeRepeatLimit="marquee_forever"-->
                    <!--android:layout_weight="1"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="甜橙"-->
                    <!--android:textAllCaps="true"-->
                    <!--android:textColor="#474747"-->
                    <!--android:textSize="15sp" />-->
                <TextView
                    android:singleLine="true"
                    android:id="@+id/tv_spming"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="甜橙"
                    android:textColor="@color/zicolor"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="10sp"
                        android:textColor="@color/hintcolor"
                        android:layout_marginLeft="12dp"
                        android:id="@+id/tv_guige_miaoshu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_renminbi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¥"
                            android:layout_marginLeft="10dp"
                            android:textColor="#ff3300"
                            android:textSize="12sp" />
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tv_yuanjiage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5.5"
                            android:textColor="@color/hintcolor"
                            android:textSize="15sp"
                            android:layout_marginLeft="4dp"/>
                        <TextView
                            android:id="@+id/tv_jiage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5.5"
                            android:textColor="#ff3300"
                            android:textSize="15sp"
                            android:layout_marginLeft="4dp"/>
                        <TextView
                            android:id="@+id/tv_spxiaoliang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="已售1257"
                            android:textColor="#999999"
                            android:textSize="10sp"
                            android:layout_marginLeft="10dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="bottom">
                        <TextView
                            android:id="@+id/tv_dian"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:text="店"
                            android:textSize="9sp"
                            android:textColor="@color/white"
                            android:background="@color/zangqing"
                            android:gravity="center"
                            />
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/iv_jpgys"
                            android:src="@mipmap/jpgys_logo"
                            android:layout_gravity="center_vertical"
                            android:layout_width="13dp"
                            android:layout_height="16dp" />
                        <TextView
                            android:id="@+id/tv_dianming"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="绿色天然蔬果店"
                            android:textColor="#999999"
                            android:textSize="12sp"
                            android:layout_marginLeft="5dp"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:paddingRight="12dp"
                    android:gravity="right"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_guanzhu"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@drawable/fillet_solid_zangqing_14"
                        android:textSize="12sp"
                        android:text="已关注"
                        android:layout_width="55dp"
                        android:layout_height="20dp" />
                    <TextView
                        android:id="@+id/tv_xiangqing"
                        android:textColor="@color/hintcolor"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:background="@drawable/fillet_solid_999999_3"
                        android:text="商品详情"
                        android:layout_marginTop="5dp"
                        android:layout_width="70dp"
                        android:layout_height="28dp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>





        <TextView
            android:id="@+id/tv_danjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ff3300"
            android:textSize="15sp"
            />



    </LinearLayout>

    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_e7e7e7"
        />
</RelativeLayout>
