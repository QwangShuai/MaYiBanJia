<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:elevation="5dp"
    android:paddingBottom="12dp"
    android:layout_margin="12dp"
    android:layout_height="159dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
       <RelativeLayout
           android:layout_width="65dp"
           android:layout_height="65dp"
           android:layout_marginLeft="12dp">
           <ImageView
               android:id="@+id/iv_sptu"
               android:layout_width="60dp"
               android:layout_height="60dp"
               />
           <TextView
               android:id="@+id/tv_xiajia"
               android:layout_width="60dp"
               android:layout_height="60dp"
               android:text="已下架"
               android:textColor="#ffffffff"
               android:textSize="10sp"
               android:background="#20000000"
               android:gravity="center"
               />
       </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="12dp">
            <TextView
                android:id="@+id/tv_spming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="甜橙"
                android:textColor="#ff474747"
                android:textSize="16sp"
                />

            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_xiaoliang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已售1257"
                    android:textColor="#ff666666"
                    android:textSize="12sp"
                    />
                <TextView
                    android:id="@+id/tv_kucun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="库存9990"
                    android:textColor="#ff666666"
                    android:textSize="12sp"
                    android:layout_marginLeft="12dp"
                    />
            </LinearLayout>

            <TextView
                android:layout_marginTop="12dp"
                android:id="@+id/tv_danjia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥ 5.5元/斤"
                android:textColor="#ffff3300"
                android:textSize="15sp"
                />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_wenhao"
        android:padding="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp">
        <ImageView
            android:src="@mipmap/wenhao_zangqing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout

        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/bt_bianji"
            android:layout_width="70dp"
            android:layout_height="28dp"
            android:text="编辑"
            android:textColor="@color/lishisousuo"
            android:textSize="15sp"
            android:background="@drawable/fillet_hollow_666666_3"
            />

        <Button
            android:layout_marginLeft="12dp"
            android:id="@+id/bt_add_guige"
            android:layout_width="70dp"
            android:layout_height="28dp"
            android:text="新增规格"
            android:textColor="@color/lishisousuo"
            android:textSize="15sp"
            android:background="@drawable/fillet_hollow_666666_3"
            />
        <Button
            android:visibility="gone"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true"
            android:id="@+id/bt_is_tejia"
            android:layout_width="70dp"
            android:layout_height="28dp"
            android:text="转为特价"
            android:textColor="@color/lishisousuo"
            android:textSize="15sp"
            android:background="@drawable/fillet_hollow_666666_3"
            />
        <Button
            android:id="@+id/bt_xiajia"
            android:layout_width="70dp"
            android:layout_height="28dp"
            android:layout_marginRight="12dp"
            android:text="下架"
            android:textColor="@color/lishisousuo"
            android:textSize="15sp"
            android:background="@drawable/fillet_hollow_666666_3"
            android:layout_marginLeft="12dp"
            android:visibility="gone"
            />

        <Button
            android:id="@+id/bt_shangjia"
            android:layout_marginRight="12dp"
            android:layout_width="70dp"
            android:layout_height="28dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/fillet_solid_zangqing_3"
            android:text="发售"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cutoff"
        android:layout_marginLeft="12dp"/>
</RelativeLayout>
