<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:id="@+id/rl_kuang"
        >
        <LinearLayout
            android:id="@+id/ll_sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="44dp"
            android:paddingRight="12dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13dp"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_spming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="普罗旺斯甜橙"
                        android:textColor="#ff474747"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:text="("
                        android:textColor="#ff474747"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_dian"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@color/zangqing"
                        android:gravity="center"
                        android:text="店"
                        android:textColor="@color/white"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/tv_dianming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="绿色天然蔬果店"
                        android:textColor="#999999"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text=")"
                        android:textColor="#ff474747"
                        android:textSize="13sp" />
                </LinearLayout>

               <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></View>

                <LinearLayout
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RatingBar
                        android:isIndicator="true"
                        android:id="@+id/rb_pingfen"
                        android:layout_height="8dp"
                        android:layout_width="wrap_content"
                        android:numStars="5"
                        android:rating="3.5"
                        style="@style/foodRatingBar"
                        android:layout_marginBottom="2dp"
                        />
                    <TextView
                        android:id="@+id/tv_pingfen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.7"
                        android:textColor="@color/zicolor"
                        android:textSize="12sp"
                        android:layout_marginLeft="8dp"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></View>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_renminbi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥"
                        android:textColor="#ff3300"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_danjia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="5.5"
                        android:textColor="#ff3300"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_spxiaoliang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:text="已售1257"
                        android:textColor="#999999"
                        android:textSize="10sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_fujiafei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="附加费：￥"
                    android:textColor="@color/zicolor"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            >
            <TextView
                android:id="@+id/biaoqian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格最低"
                android:textColor="@color/zangqing"
                android:textSize="15sp"
                android:layout_gravity="right"
                android:layout_alignParentRight="true"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp">
                <Button
                    android:id="@+id/bt_xiangqing"
                    android:layout_width="70dp"
                    android:layout_height="28dp"
                    android:background="@drawable/fillet_hollow_999999_3"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="商品详情"
                    android:textColor="@color/sousuobianse"
                    android:textSize="12sp"

                    />
                <Button
                    android:id="@+id/bt_shangjia"
                    android:layout_width="70dp"
                    android:layout_height="28dp"
                    android:background="@drawable/fillet_hollow_999999_3"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="更多商家"
                    android:textColor="@color/sousuobianse"
                    android:textSize="12sp"
                    android:layout_marginLeft="12dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/cutoff"
            android:layout_marginLeft="12dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

