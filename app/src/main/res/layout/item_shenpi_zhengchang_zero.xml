<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="12dp"
    android:background="@drawable/bg_item_yinying">
    <RelativeLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_pinlei"
            android:layout_marginLeft="22dp"
            android:text="蔬菜"
            android:textColor="@color/zicolor"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_jinru"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/jinru"
            android:layout_width="7dp"
            android:layout_height="12dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="12dp"
            android:id="@+id/rl_shichang"
            android:background="@drawable/fillet_hollow_e7e7e7_tuoyuan"
            android:layout_marginTop="12dp"
            android:layout_width="200dp"
            android:layout_height="35dp">
            <TextView
                android:id="@+id/tv_shichang"
                android:textSize="15sp"
                android:textColor="@color/zicolor"
                android:hint="请选择市场"
                android:layout_marginLeft="9dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/xiangxia_hui"
                android:layout_width="8dp"
                android:layout_height="4dp" />
        </RelativeLayout>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/rv_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
</LinearLayout>