<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="14sp"
        android:textColor="@color/zicolor"
        android:text="配送信息"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_shichang"
        android:layout_marginTop="12dp"
        android:textSize="13sp"
        android:textColor="@color/lishisousuo"
        android:text="市场:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_daiquhuo"
            android:layout_marginTop="12dp"
            android:textSize="13sp"
            android:textColor="@color/zicolor"
            android:text="待配送员取商品"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_marginTop="12dp"
            android:id="@+id/rl_rongqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_rongqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_peisongyuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="配送员:李光哲"
                    android:textColor="@color/zicolor"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:text="18513349775"
                    android:textColor="@color/zicolor"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_dianhua"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="12dp"
                    android:src="@mipmap/dianhua_black" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_chepaihao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_rongqi"
                android:layout_marginTop="12dp"
                android:text="车牌号:(黑A  94885)"
                android:textColor="@color/zicolor"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_fahuoshijian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_chepaihao"
                android:layout_marginTop="12dp"
                android:text="发货时间：8-01 06:50:00"
                android:textColor="@color/color3"
                android:textSize="13sp" />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_marginTop="18dp"
        android:background="@mipmap/bg_dian_ddxq"
        android:layout_width="match_parent"
        android:layout_height="5dp"></View>
    <!--<android.support.v7.widget.RecyclerView-->
        <!--android:id="@+id/rv_dianpu"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content">-->
    <!--</android.support.v7.widget.RecyclerView>-->
</LinearLayout>