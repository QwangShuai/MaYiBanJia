<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/white"
    android:id="@+id/cl_kuang"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_sptu"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@color/turquoise"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />
    <TextView
        android:id="@+id/tv_spming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="甜橙"
        android:textColor="#474747"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@+id/iv_sptu"
        app:layout_constraintTop_toTopOf="@+id/iv_sptu"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/tv_renminbi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥"
        android:textColor="#ff3300"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_spming"
        android:layout_marginLeft="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />
    <TextView
        android:id="@+id/tv_jiage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5.5"
        android:textColor="#ff3300"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_renminbi"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />
    <TextView
        android:id="@+id/tv_danjia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#ff3300"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_jiage"
        app:layout_constraintLeft_toRightOf="@+id/tv_jiage"
        />
    <TextView
        android:id="@+id/tv_spxiaoliang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已售1257"
        android:textColor="#999999"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_danjia"
        app:layout_constraintLeft_toRightOf="@+id/tv_danjia"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="3dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="@+id/tv_renminbi"
        app:layout_constraintBottom_toBottomOf="@+id/iv_sptu"
        android:gravity="bottom">
        <TextView
            android:id="@+id/tv_dian"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:text="店"
            android:textSize="9sp"
            android:textColor="@color/white"
            android:background="@color/zangqing"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tv_dianming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绿色天然蔬果店"
            android:textColor="#999999"
            android:textSize="12sp"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_zoushitu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/zoushi"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="12dp"
         />
    <ImageView
        android:id="@+id/iv_addcar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/addcar"
        app:layout_constraintBottom_toBottomOf="@+id/iv_sptu"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:visibility="visible"/>
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#e7e7e7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</android.support.constraint.ConstraintLayout>
