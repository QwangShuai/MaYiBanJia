<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card_yinying"
    android:layout_marginBottom="6dp"
    android:padding="12dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/quhuodanwei"
            android:textSize="15sp"
            android:textColor="@color/lishisousuo"
            android:text="取货摊位："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_quhuotanwei"
            android:textSize="15sp"
            android:textColor="@color/zicolor"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/gonghuodianhua"
            android:textSize="15sp"
            android:textColor="@color/lishisousuo"
            android:text="供货电话："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_gonghuodianhua"
            android:textSize="15sp"
            android:textColor="@color/zicolor"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_baozhuang"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/baozhuanggeshu"
            android:textSize="15sp"
            android:textColor="@color/lishisousuo"
            android:text="包装个数："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_baozhuanggeshu"
            android:textSize="15sp"
            android:textColor="@color/zangqing"
            android:text="15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_saomageshu"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/saomageshu"
            android:textSize="15sp"
            android:textColor="@color/lishisousuo"
            android:text="扫码个数："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_saomageshu"
            android:textSize="15sp"
            android:textColor="@color/zicolor"
            android:text="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>