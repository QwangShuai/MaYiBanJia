<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="12dp">
    <LinearLayout
        android:layout_marginTop="17dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:visibility="gone"
            android:layout_marginLeft="12dp"
            android:id="@+id/iv_danxuan"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/selectr_gouwuche_danxuan"
            />
        <LinearLayout
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="订单编号："
                        android:layout_centerVertical="true"
                        android:textColor="@color/zicolor"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginLeft="12dp"
                        android:text=""
                        android:layout_centerVertical="true"
                        android:textColor="@color/zicolor"
                        android:textSize="15sp"
                        android:id="@+id/tv_order_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <TextView
                    android:layout_centerVertical="true"
                    android:textSize="15sp"
                    android:textColor="@color/mayihong"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="完成时间："
                    android:textSize="13sp"
                    android:textColor="@color/hintcolor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text=""
                    android:layout_marginLeft="20dp"
                    android:textSize="13sp"
                    android:textColor="@color/hintcolor"
                    android:id="@+id/tv_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="取货地址:"
                    android:textSize="15sp"
                    android:textColor="@color/lishisousuo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_quhuodizhi"
                    android:text=""
                    android:textSize="15sp"
                    android:textColor="@color/zicolor"
                    android:layout_marginLeft="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="送货地址:"
                    android:textSize="15sp"
                    android:textColor="@color/lishisousuo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_songhuodizhi"
                    android:text=""
                    android:textSize="15sp"
                    android:textColor="@color/zicolor"
                    android:layout_marginLeft="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="13sp"
                        android:textColor="@color/lishisousuo"
                        android:text="运费：￥"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_jine"
                        android:textSize="18sp"
                        android:textColor="@color/zicolor"
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:textColor="@color/zangqing"
                    android:text="结算"
                    android:background="@drawable/bg_zangqing_biankuang"
                    android:layout_alignParentRight="true"
                    android:id="@+id/bt_jiesuan"
                    android:layout_width="70dp"
                    android:layout_height="28dp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>