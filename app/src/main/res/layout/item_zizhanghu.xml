<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:paddingLeft="12dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textSize="15sp"
            android:textColor="@color/zicolor"
            android:layout_centerVertical="true"
            android:id="@+id/tv_juese"
            android:text="厨师长"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/ll"
            android:gravity="center_vertical"
            android:layout_marginRight="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_quanxian"
                android:layout_marginRight="13dp"
                android:textSize="14sp"
                android:textColor="@color/hintcolor"
                android:text="请选择权限"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@mipmap/jinru"
                android:layout_width="7dp"
                android:layout_height="12dp" />
        </LinearLayout>
        <View
            android:layout_alignParentBottom="true"
            android:background="@color/gray_e7e7e7"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </RelativeLayout>
    <com.mingmen.mayi.mayibanjia.ui.view.XCFlowLayout
        android:id="@+id/xcf_quanxian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.mingmen.mayi.mayibanjia.ui.view.XCFlowLayout>
</LinearLayout>