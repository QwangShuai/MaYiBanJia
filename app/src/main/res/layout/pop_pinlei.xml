<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:paddingBottom="10dp"
        android:background="@color/beijing"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="36dp">
        <ImageView
            android:id="@+id/iv_back_pop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/fanhui"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            />
        <LinearLayout
            android:id="@+id/ll_sousuo_pop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/fillet_solid_white_100"
            android:gravity="center_vertical"
            android:layout_marginRight="12dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/sousuo"
                android:layout_marginLeft="12dp"/>
            <TextView
                android:id="@+id/tv_sousuozi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:hint="搜索商品名称 品类"
                android:textColorHint="@color/hintcolor"
                android:textColor="#474747"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:id="@+id/ll_shichangjia_pop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/qbcp_jgzs_b"/>
            <TextView
                android:id="@+id/tv_shichangjia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="各市场价"
                android:textColor="@color/zicolor"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@color/gray_e7e7e7"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"></View>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:id="@+id/ll_pinlei_pop"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_lable_pop"
                    android:text="品类"
                    android:textColor="@color/hintcolor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginLeft="8dp"
                    android:src="@mipmap/xiangxia_hui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_pinlei_pop"
                android:layout_marginLeft="15dp"
                android:text="全部"
                android:textColor="@color/zicolor"
                android:textSize="15sp"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:background="@color/gray_e7e7e7"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"></View>
        <LinearLayout
            android:id="@+id/ll_pinzhong_pop"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_pinzhong_lable_pop"
                    android:text="品种"
                    android:textColor="@color/hintcolor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginLeft="8dp"
                    android:src="@mipmap/xiangxia_hui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_pinzhong_pop"
                android:layout_marginLeft="15dp"
                android:text="全部"
                android:textColor="@color/zicolor"
                android:textSize="15sp"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:background="@color/gray_e7e7e7"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"></View>
        <LinearLayout
            android:id="@+id/ll_guige_pop"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_guige_lable_pop"
                    android:text="规格"
                    android:textColor="@color/hintcolor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginLeft="8dp"
                    android:src="@mipmap/xiangxia_hui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_guige_pop"
                android:layout_marginLeft="15dp"
                android:text="全部"
                android:textColor="@color/zicolor"
                android:textSize="15sp"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:background="@color/gray_e7e7e7"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"></View>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_shichang_pop"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_shichang_lable_pop"
                    android:text="市场"
                    android:textColor="@color/hintcolor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginLeft="8dp"
                    android:src="@mipmap/xiangxia_hui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_shichang_pop"
                android:layout_marginLeft="15dp"
                android:text="不限"
                android:textColor="@color/zicolor"
                android:textSize="15sp"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@color/gray_e7e7e7"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_yijifenlei"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingRight="6dp"
            android:paddingLeft="6dp"
            />
        <android.support.v7.widget.RecyclerView
            android:visibility="gone"
            android:id="@+id/rv_guige"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingRight="6dp"
            android:paddingLeft="6dp"
            />
    </RelativeLayout>


</LinearLayout>
